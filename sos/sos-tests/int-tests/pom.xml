<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>sos-tests</artifactId>
		<groupId>org.sorcersoft.sorcer</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<artifactId>int-tests</artifactId>
	<name>SORCER OS :: int tests :: integration tests</name>

	<properties>
		<maven.test.skip>true</maven.test.skip>
		<skipTests>${maven.test.skip}</skipTests>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sos-platform</artifactId>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sos-boot</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>ju-arithmetic-prv</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>ju-arithmetic-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sos-webster</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>jobber-prv</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>exertmonitor-prv</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.groovy</groupId>
			<artifactId>groovy-all</artifactId>
		</dependency>
		<dependency>
			<groupId>com.sleepycat</groupId>
			<artifactId>je</artifactId>
			<version>${v.sleepycat}</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.sorcersoft.sorcer</groupId>
				<artifactId>sorcer-maven-plugin</artifactId>
				<version>${v.sorcer}</version>
				<goals>
					<goal>run-requestor</goal>
				</goals>
				<configuration>
					<mainClass>junit.sorcer.core.provider.ArithmeticNetTest</mainClass>
					<scope>test</scope>
					<requestorClasspath>
						<requestorClasspath>net.jini.lookup:serviceui:${v.jini}</requestorClasspath>
						<requestorClasspath>org.sorcersoft.sorcer:sos-env:${v.sorcer}</requestorClasspath>
					</requestorClasspath>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>