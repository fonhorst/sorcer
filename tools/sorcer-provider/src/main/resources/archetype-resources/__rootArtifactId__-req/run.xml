<?xml version="1.0"?>
<project default="run.requestor" basedir=".">
	<!-- set property values here -->
	<property name="requestor.name" value="${rootArtifactId}-req" />
	<property name="requestor.version" value="${version}" />
	<property name="requestor.class" value="${package}.${providerInterface}Tester" />

	<property name="requestor.api" value="${rootArtifactId}-api"/>
	<property name="requestor.groupId" value="${groupId}"/>
	<property name="requestor.policy" value="src/main/resources/policy/req.policy"/>

	<!-- loads system environment variables -->
	<property environment="env" />
	<import file="${env.SORCER_HOME}/bin/common-run.xml" />
	<echo message="webster: ${provider.webster.url}" />

	<!-- provider codeabse jars -->
	<property name="j1" value="${provider.webster.url}/com/example/sorcer/${rootArtifactId}-api/${requestor.version}/${rootArtifactId}-api-${requestor.version}.jar" />
	<property name="j2" value="${provider.webster.url}/org/sorcersoft/sorcer/sos-platform/${v.sorcer}/sos-platform-${v.sorcer}.jar" />
	<property name="requestor.codebase" value="${j1} ${j2}" />
</project>

