<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>first</artifactId>
		<groupId>com.example.sorcer</groupId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>first-prv</artifactId>
	<name>SORCER :: first :: provider</name>
	<description>SORCER</description>
	<url>http://sorcersoft.org/</url>

	<dependencies>
		<dependency>
			<groupId>com.example.sorcer</groupId>
			<artifactId>first-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sos-platform</artifactId>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>commons-prv</artifactId>
			<version>${v.sorcer}</version>
		</dependency>

		<!-- CodeBase -->
		<dependency>
			<groupId>com.example.sorcer</groupId>
			<artifactId>first-proxy</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
			<exclusions>
				<exclusion>
					<groupId>org.sorcersoft.sorcer</groupId>
					<artifactId>locker</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.sorcersoft.sorcer</groupId>
					<artifactId>sos-env</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.sorcersoft.sorcer</groupId>
				<artifactId>sorcer-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>policy</goal>
						</goals>
					</execution>
					<execution>
						<id>sorcer-preit</id>
						<goals>
							<goal>provider</goal>
						</goals>
					</execution>
					<execution>
						<id>sorcer-it</id>
						<goals>
							<goal>run-requestor</goal>
						</goals>
						<configuration>
							<mainClass>com.example.sorcer.SampleServiceTester</mainClass>
							<scope>test</scope>
						</configuration>
					</execution>
					<execution>
						<id>sorcer-postit</id>
						<goals>
							<goal>destroy</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<!-- Enable maven filter feature for all *.groovy and *.config files in the src/main/resources -->
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.config</include>
					<include>**/*.groovy</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>**/*.config</exclude>
					<exclude>**/*.groovy</exclude>
				</excludes>
			</resource>
		</resources>
	</build>
</project>
