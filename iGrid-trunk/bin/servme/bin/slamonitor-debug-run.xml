<?xml version="1.0"?>
<!-- 
Replace "provider.name" with your provider name and specify property value for "provider.class."
Also you might need to adjust the classpath (provider.classpath) for your provider 
-->

<project name="Run SlaMonitor" default="run.provider" basedir=".">

	<!-- system environment variables -->
	<property environment="env" />
	<import file="${env.IGRID_HOME}/modules/common-run.xml" />
	<echo message="IGRID_HOME: ${iGrid.home}" />

	<!-- set property values here -->
	<property name="provider.name" value="slamonitor" />
	<property name="provider.class" value="sorcer.core.provider.qos.sla.slamonitor.SlaMonitor" />

	<!-- provider classpath -->
	<path id="project.classpath">
		<pathelement location="${sorcer.lib}/${provider.name}.jar" />
		<pathelement location="${common.lib}/derby.jar" />
	</path>

	<!-- provider codeabse jars -->
	<property name="j1" value="${provider.name}-dl.jar" />
	<property name="j2" value="sorcer-prv-dl.jar" />
	<property name="j3" value="jsk-dl.jar" />
	

	<!-- start provider -->
	<target name="run.provider" depends="clean-slamonitor-db">
		<java jar="${lib}/boot.jar" fork="yes">
			<jvmarg value="-Xdebug"/>
			<jvmarg value="-Xnoagent"/>
			<jvmarg value="-Djava.compiler=NONE"/>
			<jvmarg value="-Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=10005"/>
			<jvmarg value="-Djava.compiler=NONE"/>
			<arg value="${iGrid.home}/configs/startup-run-prv.config" />
			<sysproperty key="sorcer.provider.impl" value="${provider.class}" />
			<sysproperty key="sorcer.provider.config" value="../configs/${provider.name}-prv.config" />
			<sysproperty key="sorcer.provider.codebase.jars" value="${j1} ${j2} ${j3}" />
			<sysproperty key="sorcer.provider.classpath" value="${toString:project.classpath}" />
			<sysproperty key="iGrid.home" value="${iGrid.home}" />
			<sysproperty key="sorcer.env.file" value="${iGrid.home}/configs/sorcer.env" />
			<sysproperty key="java.security.policy" value="../policy/${provider.name}-prv.policy" />
			<sysproperty key="java.util.logging.config.file" value="${iGrid.home}/configs/sorcer.logging" />
		</java>
	</target>

	<target name="clean-slamonitor-db" description="Deletes SLA Monitors Database">
		<delete	 verbose="true" dir="${iGrid.home}/../../slamonitor.sla_db" />	
	</target>
	
</project>
