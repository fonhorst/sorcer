<?xml version="1.0"?>
<project name="Run Monitor" default="monitor" basedir=".">
	<!-- load system environment variables -->
	<property environment="env" />
	<import file="${env.IGRID_HOME}/modules/common-run.xml" />
	<echo message="IGRID_HOME: ${iGrid.home}" />

	<!-- set property values -->
	<property name="provider.name" value="monitor" />

	<!-- start service provider -->
	<target name="monitor">
		<java jar="${lib}/boot.jar" fork="yes">
			<arg value="../configs/start-monitor.config" />
			<sysproperty key="java.util.logging.config.file" value="${iGrid.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/${provider.name}.policy" />
			<sysproperty key="iGrid.home" value="${iGrid.home}" />
			<sysproperty key="RIO_HOME" value="${iGrid.home}/bin/rio" />
			<sysproperty key="sorcer.env.file" value="${iGrid.home}/configs/sorcer.env" />
		</java>
	</target>

</project>
