<?xml version="1.0"?>

<project name="" default="jini-browser" basedir=".">
	<property environment="env" />
	<property name="java.home" value="${env.JAVA_HOME}" />
	<property name="iGrid.home" value="${env.IGRID_HOME}" />
	<property name="common.lib" value="${iGrid.home}/common" />
	<property name="iGrid.policy" value="${iGrid.home}/policy" />
	
	<target name="jini-browser">
		<java classname="org.jini.rio.utilities.viewer.Viewer" fork="yes" maxmemory="1g">
			<arg value="${iGrid.home}/bin/rio/configs/utils.config"/>
			<jvmarg value="-Xdock:name=Rio Service Browser"/>
			<classpath>
				<pathelement location="${common.lib}/rio3_2/viewer.jar" />
				<pathelement location="${common.lib}/rio3_2/rio.jar" />
				<pathelement location="${common.lib}/serviceui-1.1.jar" />
				<pathelement location="${common.lib}/jsk-lib.jar" />
				<pathelement location="${common.lib}/jsk-platform.jar" />
			</classpath>
			<sysproperty key="java.protocol.handler.pkgs" value="net.jini.url" />
			<sysproperty key="java.security.policy" value="${iGrid.policy}/policy.all" />
			
			<!-- Configuration for remote data access -->
			<sysproperty key="data.server" value="10.131.5.90" />
			<sysproperty key="data.server.port" value="9000" />
			<sysproperty key="data.root.dir" value="${iGrid.home}/data" />
			<sysproperty key="requestor.data.dir" value="optimization/input" />
		</java>
	</target>

</project>
