<?xml version='1.0' encoding='ISO-8859-1' standalone='yes'?>
<!-- 
 * Make sure the following variable is changed to reflect your current environment:
 *    IGRID_HOME        	iGrid location
 Please see also the modules/common-build.xml for classpaths, definitions and targets
-->
<project name="worker" default="all" basedir=".">
	<property name="module.name" value="ex5" />
	<property name="module.run.dir" value="ex5" />
	<property name="provider.name" value="worker" />

	<!-- set global properties -->
	<import file="../../common-build.xml" />
	<property name="src" value="./src" />
	<property name="resources" value="./resources" />

	<!-- The sources to compile -->
	<patternset id="ant.java">
		<include name="sorcer/ex5/**/*.java" />
		<exclude name="**/SAVE/*.java" />
		<exclude name="**/BAK/*.java" />
	</patternset>

	<fileset dir="${resources}" id="icons">
		<include name="sorcer-3.jpg" />
	</fileset>

	<fileset dir="${iGrid.config}" id="config">
		<include name="computeResource.config" />
	</fileset>
	
	<patternset id="ant.classes">
		<include name="sorcer/ex5/**/*.class" />
	</patternset>

	<patternset id="ant.jars">
		<include name="${provider.name}1.jar" />
		<include name="${provider.name}-dl.jar" />
	</patternset>

	<path id="project.classpath">
		<pathelement location="${classes}" />
		<pathelement location="${sorcer.lib}/sorcerprv.jar" />
		<pathelement location="${sorcer.lib}/sorcer-lib.jar" />
		<path refid="jini.path" />
		<path refid="rio.path" />
	</path>

	<path id="javadocs.classpath">
		<path refid="jini.path" />
		<pathelement location="${common.lib}/buildsupport/ant-ext.jar" />
		<pathelement location="${common.lib}/buildsupport/ant.jar" />
	</path>

	<target name="compile" depends="compileSources" />
	<target name="jars" depends="worker, copy-run-prv-files" />
	<target name="worker" depends="worker1.jar , worker2.jar, worker1-dl.jar, worker2-dl.jar" />
	<target name="all" depends="prepare, jars" />

	<target name="worker1.jar" depends="compile">
		<classdepandjar jarfile="${sorcer.lib}/worker1.jar" files="true" debug="false">
			<classpath refid="project.classpath" />
			<in name="sorcer.ex5" />
			<topclass name="sorcer.ex5.provider.Worker1Provider" />
			<fileset dir="${iGrid.home}/classes">
				<include name="sorcer/util/sorcer.env" />
				<include name="sorcer/util/data.formats" />
			</fileset>
			<fileset refid="icons" />
			<fileset refid="config" />
		</classdepandjar>
	</target>

	<target name="worker2.jar" depends="compile">
		<classdepandjar jarfile="${sorcer.lib}/worker2.jar" files="true" debug="false">
			<classpath refid="project.classpath" />
			<in name="sorcer.ex5" />
			<topclass name="sorcer.ex5.provider.Worker2Provider" />
			<fileset dir="${iGrid.home}/classes">
				<include name="sorcer/util/sorcer.env" />
				<include name="sorcer/util/data.formats" />
			</fileset>
			<fileset refid="icons" />
			<fileset refid="config" />
		</classdepandjar>
	</target>

	<target name="worker3.jar" depends="compile">
			<classdepandjar jarfile="${sorcer.lib}/worker3.jar" files="true" debug="false">
				<classpath refid="project.classpath" />
				<in name="sorcer.ex5" />
				<topclass name="sorcer.ex5.provider.Worker3Provider" />
				<fileset dir="${iGrid.home}/classes">
					<include name="sorcer/util/sorcer.env" />
					<include name="sorcer/util/data.formats" />
				</fileset>
				<fileset refid="icons" />
				<fileset refid="config" />
			</classdepandjar>
		</target>
	
	<target name="worker1-dl.jar" depends="compile">
		<classdepandjar jarfile="${sorcer-dl.lib}/worker1-dl.jar" files="true" debug="false">
			<classpath refid="project.classpath" />
			<in name="sorcer.ex5" />
			<topclass name="sorcer.ex5.provider.Worker1" />
			<topclass name="sorcer.ui.serviceui.UIFrameFactory" />
			<topclass name="sorcer.core.AdministratableProvider" />
			<topclass name="sorcer.jini.lookup.entry.SorcerServiceType" />
			<topclass name="sorcer.service.RemoteTasker" />
			<fileset refid="icons" />
		</classdepandjar>
	</target>

	<target name="worker2-dl.jar" depends="compile">
			<classdepandjar jarfile="${sorcer-dl.lib}/worker2-dl.jar" files="true" debug="false">
				<classpath refid="project.classpath" />
				<in name="sorcer.ex5" />
				<topclass name="sorcer.ex5.provider.Worker2" />
				<topclass name="sorcer.ui.serviceui.UIFrameFactory" />
				<topclass name="sorcer.core.AdministratableProvider" />
				<topclass name="sorcer.jini.lookup.entry.SorcerServiceType" />
				<topclass name="sorcer.service.RemoteTasker" />
				<fileset refid="icons" />
			</classdepandjar>
	</target>
	
	<target name="docs" depends="prepare, compile">
		<javadoc packagenames="org.jini.rio.tools.ant.*" maxmemory="100M" sourcepath="${src}" destdir="${docs}/api" Author="true" Version="true" Use="true" windowtitle="Worker Example" doctitle="&lt;h1&gt;Worker Example;/h1&gt;" bottom="&lt;i&gt;Copyright (c) 2008-2010 Sorcesoft.org, All Rights Reserved.&lt;/i&gt;">
			<group title="Worker Provider" packages="sorcer.ext2.provider.*" />
			<classpath refid="project.classpath" />
		</javadoc>
	</target>

	<target name="copy-run-prv-files">
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/configs" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/bin" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/policy" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/logs" />
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/configs">
			<fileset dir="configs">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/bin">
			<fileset dir="bin">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/policy">
			<fileset dir="policy">
				<include name="*" />
			</fileset>
		</copy>
		<chmod dir="${iGrid.home}/bin/examples/${module.run.dir}/bin" perm="755" includes="*.sh" />
	</target>

</project>
