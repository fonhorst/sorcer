<project
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
		xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.sorcersoft.sorcer</groupId>
		<version>11.1</version>
		<artifactId>tools</artifactId>
	</parent>

	<artifactId>dependencies</artifactId>
	<packaging>pom</packaging>
	<name>SORCER tools :: dependencies</name>
	<description>SORCER dummy module that downloads libraries required at runtime and installs them in the local maven repository</description>
	<url>http://sorcersoft.org/</url>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<executableDependency>
								<groupId>org.sorcersoft.sigar</groupId>
								<artifactId>sigar-maven</artifactId>
							</executableDependency>
							<mainClass>org.sorcersoft.sigar.Zip</mainClass>
							<arguments>
								<argument>org.sorcersoft.sigar:sigar:zip:native:1.6.4</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.sorcersoft.sigar</groupId>
			<artifactId>sigar-maven</artifactId>
			<version>1.6.4</version>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sigar</groupId>
			<artifactId>sigar</artifactId>
			<version>1.6.4</version>
		</dependency>
		<!-- RIVER -->
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>outrigger</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>outrigger-dl</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>reggie</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>reggie-dl</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>mahalo</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>mahalo-dl</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>fiddler</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>fiddler-dl</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>mercury</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>mercury-dl</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>norm</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>norm-dl</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>		
		<!-- /RIVER -->
		<dependency>
			<groupId>org.dancres.blitz</groupId>
			<artifactId>blitz</artifactId>
			<version>${v.blitz}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.dancres.blitz</groupId>
			<artifactId>blitz-dl</artifactId>
			<version>${v.blitz}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.dancres.blitz</groupId>
			<artifactId>blitzui</artifactId>
			<version>${v.blitz}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<version>1.7.5</version>
		</dependency>
		<dependency>
			<groupId>ant-contrib</groupId>
			<artifactId>ant-contrib</artifactId>
			<version>1.0b3</version>
		</dependency>
	</dependencies>
</project>
