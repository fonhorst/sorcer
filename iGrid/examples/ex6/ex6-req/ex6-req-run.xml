<?xml version="1.0"?>

<project default="run.requestor" basedir=".">

	<!-- loads system environment variables -->
	<property environment="env" />
	<import file="${env.SORCER_HOME}/bin/common-run.xml" />
	<echo message="webster: ${provider.webster.url}" />
	<property name="webster" value="${provider.webster.url}" />

	<!-- set property values here -->
	<property name="requestor.name" value="ex6-req" />
	<property name="requestor.class" value="sorcer.arithmetic.requestor.ArithmeticTester" />

	<!-- provider codeabse jars -->
	<property name="j1" value="${webster}/org/sorcersoft/sorcer/ex6-api/${v.sorcer}/ex6-api-${v.sorcer}.jar" />
	<property name="j2" value="${webster}/org/sorcersoft/sorcer/sos-platform/${v.sorcer}/sos-platform-${v.sorcer}.jar" />

	<!-- define classpath using the requestor's jar file and maven runtime classpath -->
	<path id="run.classpath">
	    <path refid="runtime.classpath"/>  
	    <pathelement location="${mvn.repo}/org/sorcersoft/sorcer/${requestor.name}/${v.sorcer}/${requestor.name}-${v.sorcer}.jar" />
	</path>
	
	<target name="run.requestor" depends="mvn-init">
		<java classname="${requestor.class}" fork="yes">
		 	<classpath refid="run.classpath"/>
		  	<sysproperty key="java.util.logging.config.file" value="${sorcer.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="src/main/resources/policy/${requestor.name}.policy" />
			<sysproperty key="java.rmi.server.codebase" value="${j1} ${j2}" />
			<sysproperty key="sorcer.env.file" value="${sorcer.home}/configs/sorcer.env" />
			<arg value="${ex6-req.arg1}" />
			<arg value="${ex6-req.arg2}" />
			<arg value="${ex6-req.arg3}" />			
		</java>
	</target>
</project>

