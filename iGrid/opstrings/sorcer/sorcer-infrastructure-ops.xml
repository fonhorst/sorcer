<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE opstring SYSTEM "java://org/jini/rio/dtd/rio_opstring.dtd" [
    <!ENTITY Local.IP SYSTEM "java://java.net.InetAddress.getLocalHost().getHostAddress()" >
    <!ENTITY Local.Port "9000" >
    <!ENTITY CodeServerURL "http://&Local.IP;:&Local.Port;/" >
    <!ENTITY group SYSTEM "java://java.lang.System.getProperty(user.name)">
]>

<opstring>

    <OperationalString Name="SORCER">

        <Service Name="Ctaloger">
            <Codebase>&CodeServerURL;</Codebase>
            <Interfaces>
                <Interface>sorcer.service.Cataloger</Interface>
                <Resources>
                    <JAR>cataloger-dl.jar</JAR>
                </Resources>
            </Interfaces>
            <Groups>
                <Group>sorcer.DEV</Group>
            </Groups>
            <Maintain>2</Maintain>
        </Service>
	
	<Service Name="Jobber">
            <Codebase>&CodeServerURL;</Codebase>
            <Interfaces>
                <Interface>socer.base.Jobber</Interface>
                <Resources>
                    <JAR>jobber-dl.jar</JAR>
                </Resources>
            </Interfaces>
            <Groups>
                <Group>sorcer.DEV</Group>
            </Groups>            
            <Maintain>2</Maintain>
        </Service>  
            
	<Service Name="JavaSpace">
            <Codebase>&CodeServerURL;</Codebase>
            <Interfaces>
                <Interface>net.jini.space.JavaSpace</Interface>
                <Resources>
                    <JAR>jsk-dl.jar</JAR>
                </Resources>
            </Interfaces>
            <Groups>
                <Group>sorcer.DEV</Group>
            </Groups>            
            <Maintain>1</Maintain>
        </Service>
  
   <Include>jini-infrastructure.xml</Include>

  </OperationalString>

</opstring>