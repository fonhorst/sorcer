<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE opstring SYSTEM "java://org/jini/rio/dtd/rio_opstring.dtd" [
    <!ENTITY Local.IP SYSTEM "java://java.net.InetAddress.getLocalHost().getHostAddress()" >
    <!ENTITY Local.Port "9000" >
    <!ENTITY CodeServerURL "http://&Local.IP;:&Local.Port;/" >
]>

<opstring>
    <OperationalString Name="JNI Test">

        <Codebase>&CodeServerURL;</Codebase>

        <Groups>
            <Group>sorcer.DEV</Group>
        </Groups>

        <ServiceBean Name="JNI Test" MatchOnName="yes">
            <Interfaces>
                <Interface>org.jini.rio.resources.servicecore.Service</Interface>
                <Resources>
                    <JAR>rio-dl.jar</JAR>
                </Resources>
            </Interfaces>

            <ImplementationClass>org.jini.rio.demos.jni.JNITest
                <Resources ComputeHttpmd="yes">
                    <JAR>jni.jar</JAR>                             
                    <SharedComponent>                    
                        <ClassName>org.jini.rio.demos.jni.component.JNIObject</ClassName>
                        <JAR>jni-component.jar</JAR>                       
                    </SharedComponent>                                       
                </Resources>
            </ImplementationClass>

            <ServiceLevelAgreements>
                <SystemRequirements>
                    <SystemComponent 
                        ClassName="org.jini.rio.qos.capability.software.NativeLibrarySupport">
                        <Attribute Name="Name" Value="JNITest"/>
                    </SystemComponent>
                </SystemRequirements>
            </ServiceLevelAgreements>

            <Maintain>1</Maintain>

            <Comment>Java JNI Library test</Comment>
        </ServiceBean>        

    </OperationalString>
</opstring>
