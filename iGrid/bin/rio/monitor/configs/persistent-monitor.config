import java.util.logging.ConsoleHandler;
import java.util.logging.Level;
import org.jini.rio.log.LoggerConfig;
import org.jini.rio.log.LoggerConfig.LogHandlerConfig;

org.jini.rio.monitor {
    initialLookupGroups = new String[] { "sorcer.DEV" };
    serviceName = "Monitor";
    serviceComment = "Dynamic Provisioning Agent";

    loggerConfigs = new LoggerConfig[] {
        new LoggerConfig("org.jini.rio.monitor",
                         Level.FINER,
                         false,
                         new LogHandlerConfig[] {
                             new LogHandlerConfig(new ConsoleHandler(), Level.FINER)
                         })
    };

    logDirectory = "${RIO_LOG_DIR}/monitor.log";

}

