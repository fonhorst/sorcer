import java.util.logging.ConsoleHandler;
import java.util.logging.Level;
import org.jini.rio.log.LoggerConfig;
import org.jini.rio.log.LoggerConfig.LogHandlerConfig;

org.jini.rio.monitor {
    initialLookupGroups = new String[] { "sorcer.DEV" };
    //initialLookupGroups = new String[] {"${user.name}"};
    serviceName = "Monitor";
    serviceComment = "Dynamic Provisioning Agent";

    initialOpStrings = new String[]{"${IGRID_HOME}${/}opstrings${/}sorcer-infrastructure-ops.xml"};
    //initialOpStrings = new String[]{"../opstrings/hello.xml"};
    //initialOpStrings = new String[]{"../opstrings/jni.xml"};    

    loggerConfigs = new LoggerConfig[] {
        new LoggerConfig("org.jini.rio.monitor",
                          Level.FINER,
                          false,
                          new LogHandlerConfig[] {
                              new LogHandlerConfig(new ConsoleHandler(), Level.FINER)
                          }) 
    };
    
    // Configure a FaultDetectionHandler for the ProvisionMonitor
    fdh = "org.jini.rio.resources.client.HeartbeatFaultDetectionHandler";
    configArg = new Object[]{ new String[]{"-"} };
    faultDetectionHandler = new org.jini.rio.core.ClassBundle(fdh,
                                                              null,  // load from classpath
							      new String[]{"setConfiguration"},
							      new Object[]{ configArg }
                                                              );
}

