<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE opstring SYSTEM "java://org/jini/rio/dtd/rio_opstring.dtd" [
    <!ENTITY Local.IP SYSTEM "java://java.net.InetAddress.getLocalHost().getHostAddress()" >
    <!ENTITY Local.Port "9000" >
    <!ENTITY CodeServerURL "http://&Local.IP;:&Local.Port;/" >
]>

<opstring>
    <OperationalString Name="Generic SCA OpString">

        <ServiceBean Name="Generic Service Control Adapter" MatchOnName="yes">
            <Codebase>&CodeServerURL;</Codebase>
            <Interfaces>
                <Interface>org.jini.rio.sca.generic.SCAInterface</Interface>
                <Resources>
                    <JAR>generic-sca-dl.jar</JAR>
                    <JAR>rio-dl.jar</JAR>
                </Resources>
            </Interfaces>

            <ImplementationClass>org.jini.rio.sca.generic.SCA
                <Resources>
                    <JAR>generic-sca.jar</JAR>
                    <JAR>rio.jar</JAR>
                </Resources>
            </ImplementationClass>
      
            <ServiceLevelAgreements>

                <SystemRequirements>
                    <Utilization ID="System" High=".7" />
                </SystemRequirements>

            </ServiceLevelAgreements>

            <Groups>
                <Group>rio</Group>
            </Groups>

            <Maintain>1</Maintain>
            
            <MaxPerMachine>1</MaxPerMachine>

            <Parameters>
                <Parameter Name="startScript" Value="c:\jakarta-tomcat-5.0.18\bin\startup.bat"/>
                <Parameter Name="stopScript" Value="c:\jakarta-tomcat-5.0.18\bin\shutdown.bat"/>
            </Parameters>
          

            <Comment>Tomcat Web Container SCA</Comment>
        </ServiceBean>

    </OperationalString>
</opstring>
