<?xml version="1.0"?>

<project name="" default="webster" basedir=".">
	<property environment="env" />
	<property name="java.home" value="${env.JAVA_HOME}" />
	<property name="sorcer.home" value="${env.SORCER_HOME}" />
	<property name="lib" value="${sorcer.home}/lib" />
	<property name="common.lib" value="${sorcer.home}/common" />
	<property name="classes" value="${sorcer.home}/classes" />
	<property name="sorcer.policy" value="${sorcer.home}/policy" />
	<property name="sorcer.config" value="${sorcer.home}/configs" />
	<property name="webster.port" value="${env.RIO_WEBSTER_PORT}" />
	<property name="webster" value="${env.RIO_WEBSTER}" />
	
	<loadproperties srcfile="${sorcer.home}/configs/sorcer.env">
	</loadproperties>

	<target name="webster">
		<java jar="${common.lib}/rio3_2/webster.jar" fork="yes">
			<sysproperty key="java.protocol.handler.pkgs" value="net.jini.url" />
			<sysproperty key="org.jini.rio.tools.webster.debug" value="true" />
			<sysproperty key="java.security.policy" value="${sorcer.policy}/policy.all" />
			<sysproperty key="org.jini.rio.tools.webster.root" value="${common.lib}/rio3_2;${lib};${common.lib}" />
			<sysproperty key="org.jini.rio.tools.webster.port" value="${webster.port}" />
		</java>
	</target>

</project>
