<?xml version="1.0"?>
<project name="Run Cybernode, Monitor, and Reggie" default="cybernode" basedir=".">
	<!-- load system environment variables -->
	<property environment="env" />
	<import file="${env.SORCER_HOME}/modules/common-run.xml" />
	<echo message="SORCER_HOME: ${sorcer.home}" />

	<!-- set property values -->
	<property name="provider.name" value="cybernode" />

	<!-- start service provider -->
	<target name="cybernode">
		<java jar="${lib}/boot.jar" fork="yes">
			<arg value="../configs/start-cybernode-monitor-reggie.config" />
			<sysproperty key="java.util.logging.config.file" value="${sorcer.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/${provider.name}.policy" />
			<sysproperty key="sorcer.home" value="${sorcer.home}" />
			<sysproperty key="RIO_HOME" value="${sorcer.home}/bin/rio" />
			<sysproperty key="sorcer.env.file" value="${sorcer.home}/configs/sorcer.env" />
		</java>
	</target>

</project>
