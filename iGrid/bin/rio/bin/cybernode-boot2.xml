<?xml version="1.0"?>
<project name="Run Cybernode" default="run.provider" basedir=".">
	<!-- load system environment variables -->
	<property environment="env" />
	<import file="${env.SORCER_HOME}/bin/common-run.xml" />
	<echo message="SORCER_HOME: ${sorcer.home}" />
	<echo message="RIO_HOME: ${rio.home}" />
		
	<!-- set property values -->
	<property name="provider.name" value="cybernode" />

	<!-- set property values -->
	<property name="provider.name" value="cybernode" />
	<property name="provider.class" value="sorcer.core.provider.jobber.ServiceJobber" />

	<!-- define provider classpath -->
	<path id="project.classpath">
		<pathelement location="${rio.lib}/$cybernode-service.jar" />
		<pathelement location="${rio.lib}/rio-platform.jar" />
		<pathelement location="${rio.lib}/rio-api.jar" />
		<pathelement location="${jini.lib}/jsk-lib.jar" />
		<pathelement location="${jini.lib}/jsk-platform.jar" />
		<pathelement location="${jini.lib}/serviceui.jar" />
	</path>

	<!-- define provider codebase -->
	<property name="j1" value="${provider.webster.url}/cybernode-api.jar" />
	<property name="j2" value="${provider.webster.url}/cybernode-proxy.jar" />
	<property name="j3" value="${provider.webster.url}/cybernode-ui.jar" />
	<property name="j4" value="${provider.webster.url}/jsk-dl.jar" />

	<!-- start service provider -->
	<target name="run.provider">
		<java classname="com.sun.jini.start.ServiceStarter" classpathref="${boot.classpath}" fork="yes">
			<sysproperty key="sorcer.home" value="${sorcer.home}" />
			<sysproperty key="java.util.logging.config.file" value="${sorcer.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/${provider.name}-prv.policy" />
			<sysproperty key="sorcer.env.file" value="${sorcer.home}/configs/sorcer.env" />
			<sysproperty key="sorcer.provider.codebase" value="${j1} ${j2} ${j3} ${j4}" />
			<sysproperty key="sorcer.provider.classpath" value="${toString:project.classpath}" />
			<sysproperty key="sorcer.provider.config" value="../configs/${provider.name}-prv.config" />
			<sysproperty key="sorcer.provider.impl" value="${provider.class}" />
			<arg value="${sorcer.home}/configs/startup-prv.config" />
		</java>
	</target>

</project>
