import net.jini.jeri.tcp.TcpServerEndpoint;
import net.jini.jeri.BasicILFactory;
import net.jini.jeri.BasicJeriExporter;
import net.jini.core.entry.Entry;
import net.jini.lookup.entry.*;
import sorcer.provider.boot.Booter;
import sorcer.util.Sorcer;

com.sun.jini.mercury {
    initialLookupGroups = Sorcer.getLookupGroups();
    hostName = Booter.getHostName();
    initialLookupAttributes = new Entry[] { new Name("Event Mailbox"), new Comment(hostName) };
    serverExporter = new BasicJeriExporter(TcpServerEndpoint.getInstance(0), new BasicILFactory());
}
