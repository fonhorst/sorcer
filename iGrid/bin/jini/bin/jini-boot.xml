<?xml version="1.0"?>
<project name="Jini basic services" default="jini all" basedir=".">

	<import file="../../../bin/common-run.xml" />

	<target name="jini all" depends="mvn-init">
        <java classname="sorcer.boot.ServiceStarter" fork="yes">
            <classpath refid="boot.classpath"/>
            <arg value="../configs/boot-jini.config" />
            <sysproperty key="sorcer.home" value="${sorcer.home}" />
            <sysproperty key="java.security.policy" value="../configs/sorcer.policy" />
            <sysproperty key="java.security.policy" value="../policy/jini.policy" />
        </java>
	</target>

</project>