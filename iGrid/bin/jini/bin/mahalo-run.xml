<?xml version="1.0"?>

<project name="Transaction Manager" default="mahalo" basedir=".">

    <import file="../../common-run.xml" />

	<target name="mahalo">
        <java classname="sorcer.boot.ServiceStarter" fork="yes">
            <jvmarg value="-Djava.net.preferIPv4Stack=true" />
            <classpath refid="boot.classpath"/>
            <arg value="../configs/start-mahalo.config" />
            <sysproperty key="java.rmi.server.useCodebaseOnly" value="false" />
            <sysproperty key="sorcer.home" value="${sorcer.home}" />
            <sysproperty key="java.security.policy" value="../policy/jini.policy" />
            <sysproperty key="java.protocol.handler.pkgs" value="net.jini.url" />
		</java>
	</target>

</project>