<?xml version="1.0"?>
<project name="Jini basic services" default="jini all" basedir=".">

	<import file="../../../bin/common-run.xml" />

	<target name="jini all">
		<java jar="${lib}/boot.jar" fork="yes">
			<arg value="../configs/boot-jini-min.config" />
			<sysproperty key="sorcer.home" value="${sorcer.home}" />
			<sysproperty key="sorcer.env.file" value="${sorcer.home}/configs/sorcer.env" />
			<sysproperty key="java.security.policy" value="../policy/jini.policy" />
			<sysproperty key="java.util.logging.config.file" value="${sorcer.home}/configs/sorcer.logging" />
		</java>
	</target>

</project>