<?xml version="1.0"?>

<project name="configurable code server" default="webster" basedir=".">
	
	<!-- load system environment variables -->
	<property environment="env" />
	<import file="${env.SORCER_HOME}/bin/common-run.xml" />
	<echo message="SORCER_HOME: ${sorcer.home}" />
	<property name="iGrid.data" value="${sorcer.home}/data" />

	<target name="webster">
		<java classname="sorcer.boot.ServiceStarter" fork="yes">
			<jvmarg value="-Djava.net.preferIPv4Stack=true" />
			<classpath refid="boot.classpath"/>
			<arg value="../configs/start-webster.config" />
			<sysproperty key="java.security.policy" value="../policy/webster.policy" />
			<sysproperty key="sorcer.home" value="${sorcer.home}" />
			<sysproperty key="webster.tmp.dir" value="${iGrid.data}" />
		</java>
	</target>
</project>
