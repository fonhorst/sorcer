sorcer build configuration
by Sekhar Soorianarayanan sooriana@cs.ttu.edu
-->

 <project name="SORCER" default="install" basedir=".">

 <property environment="env"/>
 <property name="CODEBASE" value="${env.APP_CODEBASE}" />
 <property name="PDIR" value="sorcer/servlets" />

 <path id="project.classpath">
    <pathelement path="${env.CLASSPATH}" />
    <pathelement path="${CODEBASE}" />
 </path>

 <fileset dir=".">
    <patternset id="java.source" >
       <include name="benchmarks/**/*.java" />
       <include name="**/*.java" />
       <exclude name="**/SAVE/*.java" />
       <exclude name="**/BAK/*.java" />
    </patternset>
 </fileset>

 <fileset dir="${CODEBASE}">
    <patternset id="java.classes" >
       <include name="${PDIR}/**/*.class" />
       <exclude name="${PDIR}/**/SAVE/*.class" />
       <exclude name="${PDIR}/**/BAK/*.class" />
    </patternset>
 </fileset>

 <fileset dir="${CODEBASE}">
   <patternset id="rmic.classes" >
      <include name="sorcer/servlets/ServiceServlet.class" />      
   </patternset>
 </fileset>

 <target name="install" depends="clean, compile, rmics, copy_files" />
  
 <target name="clean" if="${CODEBASE}/${PDIR}" >
   <delete verbose="true" >
    	<fileset dir="${CODEBASE}/${PDIR}" >
           <patternset refid="java.classes" />
        </fileset>
   </delete>
 </target>

  <target name="compile" >
   <javac srcdir="." destdir="${CODEBASE}" deprecation="no" >
    <classpath refid="project.classpath" />
    <patternset refid="java.source" />
   </javac>
 </target>

 <target name="copy_files" >
    <copy todir="${CODEBASE}/${PDIR}" >
      <fileset dir="." >
	<include name="gateway.properties" />
      </fileset>
    </copy>
 </target>

 <target name="rmics" depends="compile" >
   <rmic base="${CODEBASE}" >
     <classpath refid="project.classpath" />
     <patternset refid="rmic.classes" />
   </rmic>
 </target>

</project>
