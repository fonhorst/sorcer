<?xml version='1.0' encoding='ISO-8859-1' standalone='yes'?>

<project name="Rosen-Suzuki Optimizer" default="all" basedir=".">
	<property name="module.name" value="rs-opti" />
	<property name="module.run.dir" value="ex9" />

	<!-- set global properties -->
	<import file="../../common-build.xml" />
	<property name="src" value="./src" />
	<property name="resources" value="${iGrid.home}/modules/sorcer/resources" />
	
	<!-- The sources to compile -->
	<patternset id="ant.java">
		<include name="sorcer/opti/rs/**/*.java" />
		<exclude name="**/SAVE/*.java" />
		<exclude name="**/BAK/*.java" />
	</patternset>

	<patternset id="ant.classes">
		<include name="sorcer/opti/rs/**/*.class" />
	</patternset>

	<fileset dir="${resources}" id="icons">
			<include name="sorcer.jpg" />
	</fileset>
	
	<path id="project.classpath">
		<pathelement location="${classes}" />
		<pathelement location="${sorcer.lib}/sorcer-prv.jar" />
		<pathelement location="${sorcer.lib}/sorcer-prv.jar" />
		<path refid="jaxp.path" />
		<path refid="jini.path" />
		<path refid="rio.path" />
	</path>

	<path id="javadocs.classpath">
		<path refid="jini.path" />
		<pathelement location="${common.lib}/buildsupport/ant-ext.jar" />
		<pathelement location="${common.lib}/buildsupport/ant.jar" />
	</path>

	<!-- No RMI stubs are required for JERI type of providers -->
	<target name="compile" depends="compileSources" />
	<target name="jars" depends="opti, copy-run-prv-files" />
	<target name="opti" depends="rs-opti.jar" />
	<target name="all" depends="prepare, compile, jars, copy-run-prv-files" />

	<!-- No RMI stubs are required for JERI type of providers -->
	<target name="rs-opti.jar" depends="compile">
		<classdepandjar jarfile="${sorcer.lib}/rs-opti.jar" files="true" debug="false">
			<classpath refid="project.classpath" />
			<in name="sorcer" />
			<topclass name="sorcer.opti.rs.RosenSuzukiOptiRequestor" />
			<topclass name="sorcer.vfe.OptimizationModeling" />
			<topclass name="sorcer.core.context.model.opti.Optimization" />
			<fileset refid="icons" />
		</classdepandjar>
	</target>

	<target name="docs" depends="prepare, compile">
		<javadoc packagenames="org.jini.rio.tools.ant.*" maxmemory="100M" sourcepath="${src}" destdir="${docs}/api" Author="true" Version="true" Use="true" windowtitle="Rosen-Suzuki Model" doctitle="&lt;h1&gt;Rosen-Suzuki Model;/h1&gt;" bottom="&lt;i&gt;Copyright (c) 2010 SORCERsoft.org, All Rights Reserved.&lt;/i&gt;">
			<group title="Rosen-Suzuki Model" packages="sorcer.arithmetic.*" />
			<classpath refid="project.classpath" />
		</javadoc>
	</target>

	<target name="copy-run-prv-files">
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/configs" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/bin" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/policy" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/logs" />
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/configs">
			<fileset dir="configs">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/bin">
			<fileset dir="bin">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/policy">
			<fileset dir="policy">
				<include name="*" />
			</fileset>
		</copy>
		<chmod dir="${iGrid.home}/bin/examples/${module.run.dir}/bin" perm="755" includes="*.sh" />
	</target>

</project>
