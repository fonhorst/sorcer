 * Make sure the following variables are changed to reflect your environment:
 *    IGRID_HOME        	iGrid location
 *    JAVA_HOME         	JDK Location
 *	  IGRID_WEBSTER_PORT 	The class server (webster) port
 *    ANT_HOME          	Jakarta Ant location
 Please see also the ../common-build.xml for classpaths, definitions and targets
-->
<project name="Evaluation Provider" default="all" basedir=".">
	<property name="module.name" value="eval" />
	<property name="module.run.dir" value="eval" />

	<!-- set global properties -->
	<import file="../../../../../../common-build.xml" />
	<property name="src" value="./" />
	<property name="resources" value="${iGrid.home}/modules/sorcer/resources" />
	
	<!-- The sources to compile -->
	<patternset id="ant.java">
		<include name="sorcer/core/provider/eval/*.java" />
		<exclude name="**/SAVE/*.java" />
		<exclude name="**/BAK/*.java" />
	</patternset>

	<patternset id="ant.classes">
		<include name="sorcer/core/provider/eval/*.class" />
	</patternset>

	<patternset id="ant.jars">
		<include name="evauluation-prv.jar" />
	</patternset>

	<path id="project.classpath">
		<pathelement location="${classes}" />
		<pathelement location="${sorcer.lib}/sorcer-prv.jar" />
		<pathelement location="${common.lib}/tea.jar" />
		<pathelement location="${servlet.api}" />
		<pathelement location="${common.lib}/classes12.zip" />
		<pathelement location="${common.lib}/jintegra.jar" />
		<path refid="jaxp.path" />
		<path refid="jini.path" />
		<path refid="rio.path" />
	</path>

	<fileset dir="${resources}" id="icons">
		<include name="sorcer.jpg" />
	</fileset>
	
	<path id="javadocs.classpath">
		<pathelement location="${common.lib}/rio/serviceui-1.1a.jar" />
		<pathelement location="${common.lib}rio//ant-ext.jar" />
		<pathelement location="${ant.home}/lib/ant.jar" />
	</path>

	<!-- No RMI stubs are required for JERI type of providers -->
	<target name="compile" depends="compileSources" />
	<target name="jars" depends="evaluation-prv.jar" />
	<target name="all" depends="prepare, jars, copy-run-prv-files" />

	<!-- No RMI stubs are required for JERI type of providers -->
	<target name="evaluation-prv.jar" depends="compile">
		<classdepandjar jarfile="${sorcer.lib}/evaluation-prv.jar" files="true" debug="false">
			<classpath refid="project.classpath" />
			<in name="sorcer" />
			<out name="sorcer.util.bdb" />
			<topclass name="sorcer.core.provider.eval.EvaluationProvider" />
			<topclass name="sorcer.core.provider.eval.ServiceEvaluationTask" />
			<fileset refid="icons" />
		</classdepandjar>
	</target>


	<target name="docs" depends="prepare, compile">
		<javadoc packagenames="org.jini.rio.tools.ant.*" maxmemory="100M" sourcepath="${src}" destdir="${docs}/api" Author="true" Version="true" Use="true" windowtitle="Arithmetic Examples" doctitle="&lt;h1&gt;Arithmetic Examples;/h1&gt;" bottom="&lt;i&gt;Copyright (c) 2002-2006 Texas tech University, All Rights Reserved.&lt;/i&gt;">
			<group title="Evaluation provider" packages="sorcer.core.provider.eval*" />
			<classpath refid="project.classpath" />
		</javadoc>
	</target>

	<target name="copy-run-prv-files">
		<mkdir dir="${iGrid.home}/bin/sorcer/${module.name}/configs" />
		<mkdir dir="${iGrid.home}/bin/sorcer/${module.name}/bin" />
		<mkdir dir="${iGrid.home}/bin/sorcer/${module.name}/policy" />
		<mkdir dir="${iGrid.home}/bin/sorcer/${module.name}/logs" />
		
		<copy todir="${iGrid.home}/bin/sorcer/${module.name}/configs">
			<fileset dir="configs">
				<include name="*" />
			</fileset>
		</copy>
		
		<copy todir="${iGrid.home}/bin/sorcer/${module.name}/bin">
			<fileset dir="bin">
				<include name="*" />
			</fileset>
		</copy>
		
		<copy todir="${iGrid.home}/bin/sorcer/${module.name}/policy">
			<fileset dir="policy">
				<include name="*" />
			</fileset>
		</copy>
		
		<chmod dir="${iGrid.home}/bin/sorcer/${module.name}/bin" perm="755" includes="*.sh" />
	</target>

</project>
