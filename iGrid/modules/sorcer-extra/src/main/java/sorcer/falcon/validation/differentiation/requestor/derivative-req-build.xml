<project name="Derivative-Evaluator Requestors" default="all" basedir=".">
	<property name="module.name" value="falcon/validation/differentiation/requestor" />
	<!-- set global properties -->
	<import file="../../../../../../../common-build.xml" />
	<property name="src" value="../../../../../../src" />
	
	<path id="project.classpath">
		<pathelement location="${classes}/" />
		<pathelement location="${lib}/jgapp.jar" />
		<path refid="jini.path" />
		<path refid="jep.path" />
	</path>

	<!-- The sources to compile -->
	<patternset id="ant.java">
		<include name="sorcer/falcon/validation/differentiation/requestor/**/*.java" />
		<include name="sorcer/falcon/validation/base/**/*.java" />
		<include name="sorcer/falcon/validation/context/**/*.java" />
		<include name="sorcer/falcon/validation/condition/**/*.java" />
	</patternset>
	
	<patternset id="ant.classes">
		<include name="sorcer/falcon/validation/differentiation/requestor/**/*.class" />
		<include name="sorcer/falcon/validation/base/**/*.class" />
		<include name="sorcer/falcon/validation/context/**/*.class" />
		<include name="sorcer/falcon/validation/condition/**/*.class" />
	</patternset>
	
	<target name="compile" depends="compileSources" />
	<target name="jars" depends="derivativeReq" />
	<target name="derivativeReq" depends="derivativeReq.jar, derivativeReq-dl.jar" />
	<target name="all" depends="compile, jars, copy-run-prv-files" />

	<target name="derivativeReq.jar">
		<classdepandjar jarfile="${lib}/derivativeReq.jar" files="true">
			<classpath refid="project.classpath"/>
			<!-- Put the full package as much as possible for a smaller jar file -->
			<in name="sorcer.falcon.validation.differentiation.requestor" />
			<in name="sorcer.falcon.validation.base" />
			<in name="sorcer.falcon.validation.context" />
			<in name="sorcer.falcon.validation.condition" />
				
			<topclass name="sorcer.falcon.validation.differentiation.requestor.FunctionImpl" />
			<topclass name="sorcer.falcon.validation.differentiation.requestor.DerivativeTask" />
			<topclass name="sorcer.falcon.validation.differentiation.requestor.DerivativeWhileTask" />
			<topclass name="sorcer.falcon.validation.base.DerivativeRemote" />
			<topclass name="sorcer.falcon.validation.base.Function" />
			<topclass name="sorcer.falcon.validation.context.CalcContext" />
			<topclass name="sorcer.falcon.validation.condition.DerivativeWhileCondition" />
		</classdepandjar>
	</target>
	
	<target name="derivativeReq-dl.jar">
		<classdepandjar jarfile="${lib}/derivativeReq-dl.jar" files="true">
			<classpath refid="project.classpath"/>
			<in name="sorcer"/>
			<in name="jgapp" />
			
			<topclass name="sorcer.falcon.validation.base.DerivativeRemote" />
			<topclass name="sorcer.falcon.validation.base.Function" />
			
			<topclass name="sorcer.core.exertion.ServiceJob" />
			<topclass name="sorcer.core.exertion.ServiceTask" />
			<topclass name="sorcer.core.exertion.ExertionEnvelop" />
			<topclass name="sorcer.core.context.ServiceContext" />
		</classdepandjar>
	</target>
	
	<target name="copy-run-prv-files">
		<mkdir dir="${sorcer.home}/bin/sorcer/${module.name}/bin" />
		<mkdir dir="${sorcer.home}/bin/sorcer/${module.name}/policy" />
		<mkdir dir="${sorcer.home}/bin/sorcer/${module.name}/logs" />
		<copy todir="${sorcer.home}/bin/sorcer/${module.name}/bin">
			<fileset dir="bin">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${sorcer.home}/bin/sorcer/${module.name}/policy">
			<fileset dir="policy">
				<include name="*" />
			</fileset>
		</copy>
		<chmod dir="${sorcer.home}/bin/sorcer/${module.name}/bin" perm="755" includes="*.sh" />
	</target>
	
</project>
