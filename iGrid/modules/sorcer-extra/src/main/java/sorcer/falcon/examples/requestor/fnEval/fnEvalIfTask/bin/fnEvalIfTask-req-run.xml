<?xml version="1.0"?>
<!-- 
Replace MYREQUESTOR with your requestor name and specify property value for "requestor.class."
Also you might need to adjust the classpath (project.classpath) for your requestors. 
-->

<project name="Run Function Evaluator Task" default="run.requestor" basedir=".">
	
	<!-- loads system environment variables -->
	<property environment="env" />
	<import file="${env.SORCER_HOME}/modules/common-run.xml" />
	
	<!-- set property values here -->
	<property name="requestor.name" value="FnEvalIfTask"/>
	<property name="requestor.class" value="sorcer.falcon.examples.requestor.fnEval.fnEvalIfTask.FnEvalIfTask"/>

	<path id="project.classpath">
		<pathelement location="${sorcer.home}/lib/${requestor.name}.jar" />
		<pathelement location="${sorcer.home}/lib/sorcer.jar" />
		<pathelement location="${sorcer.home}/lib/jgapp.jar" />
        <pathelement location="${sorcer.home}/common/jini-ext.jar" />
        <pathelement location="${sorcer.home}/common/sun-util.jar" />
        <pathelement location="${sorcer.home}/common/serviceui-1.1.jar" />
		<pathelement location="${sorcer.home}/common/jep-2.4.0.jar" />
		<pathelement location="${sorcer.home}/common/ext-1.1.0.jar" />
	</path>

	<target name="run.requestor">
		<java classname="${requestor.class}" fork="yes">
			<classpath refid="project.classpath" />
			<sysproperty key="java.util.logging.config.file" value="${sorcer.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/${requestor.name}-req.policy" />
			<sysproperty key="java.rmi.server.codebase" value="${provider.webster.url}/${requestor.name}-dl.jar ${provider.webster.url}/jini-ext.jar" />
			<sysproperty key="sorcer.env.file" value="${sorcer.home}/configs/sorcer.env" />
		</java>
	</target>
	
</project>
