<project name="Function Evaluator" default="all" basedir=".">
	<property name="module.name" value="falcon/examples/provider/fnEval" />
	<!-- set global properties from common-build.xml -->
	<import file="../../../../../../../common-build.xml" />
	<property name="src" value="../../../../../../src" />
	
	<path id="project.classpath">
		<pathelement location="${classes}" />
		<path refid="jini.path" />
		<path refid="jep.path" />
	</path>

	<!-- The sources to compile -->
	<patternset id="ant.java">
		<include name="sorcer/falcon/examples/provider/fnEval/**/*.java" />
		<include name="sorcer/falcon/examples/condition/**/*.java" />
		<include name="sorcer/falcon/examples/context/**/*.java" />
	</patternset>
	
	<patternset id="ant.classes">
		<include name="sorcer/falcon/examples/provider/fnEval/**/*.class" />
		<include name="sorcer/falcon/examples/condition/**/*.class" />
		<include name="sorcer/falcon/examples/context/**/*.class" />
	</patternset>
	
	<patternset id="ant.jars">
		<include name="fnEval.jar" />
		<include name="fnEval-dl.jar" />
	</patternset>
	
	<target name="compile" depends="compileSources" />
	<target name="jars" depends="fnEval" />
	<target name="fnEval" depends="fnEval.jar, fnEval-dl.jar" />
	<target name="all" depends="prepare, compile, jars, copy-run-prv-files" />
	
	<target name="fnEval.jar">
		<classdepandjar jarfile="${lib}/fnEval.jar" files="true">
			<classpath refid="project.classpath"/>
			<!-- Put the full package as much as possible for a smaller jar file -->
			<in name="sorcer.falcon.examples.provider.fnEval" />
			<in name="sorcer.falcon.examples.condition" />
			<in name="sorcer.falcon.examples.context" />
			
			<!-- Add all provider classes here -->
			<topclass name="sorcer.falcon.examples.provider.fnEval.FnEvalImpl" />
			<topclass name="sorcer.falcon.examples.condition.FnWhileCondition" />
			<topclass name="sorcer.falcon.examples.context.FnContext" />
		</classdepandjar>
	</target>

	<target name="fnEval-dl.jar">
		<classdepandjar jarfile="${lib}/fnEval-dl.jar" files="true">
			<classpath refid="project.classpath"/>
			<in name="sorcer"/>
			<topclass name="sorcer.falcon.examples.provider.fnEval.FnEvalImpl_Stub" />
			<topclass name="sorcer.falcon.examples.condition.FnWhileCondition" />
			<topclass name="sorcer.falcon.examples.context.FnContext" />
			
			<topclass name="sorcer.core.AdministratableProvider" />
			<topclass name="sorcer.jini.lookup.entry.SorcerServiceType" />
			<topclass name="sorcer.ui.serviceui.UIComponentFactory" />	
			<topclass name="sorcer.ui.serviceui.UIFrameFactory" />
			
			<topclass name="sorcer.core.exertion.ServiceJob" />
			<topclass name="sorcer.core.exertion.ServiceTask" />
			<topclass name="sorcer.core.exertion.ExertionEnvelop" />
			<topclass name="sorcer.falcon.base.Conditional" />
			<topclass name="sorcer.falcon.core.exertion.IfExertion" />
			<topclass name="sorcer.falcon.core.exertion.WhileExertion" />
			<topclass name="sorcer.core.context.ServiceContext" />
		</classdepandjar>
	</target>

	<target name="copy-run-prv-files">
		<mkdir dir="${iGrid.home}/bin/sorcer/${module.name}/configs" />
		<mkdir dir="${iGrid.home}/bin/sorcer/${module.name}/bin" />
		<mkdir dir="${iGrid.home}/bin/sorcer/${module.name}/policy" />
		<mkdir dir="${iGrid.home}/bin/sorcer/${module.name}/logs" />
		<copy todir="${iGrid.home}/bin/sorcer/${module.name}/configs">
			<fileset dir="configs">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/sorcer/${module.name}/bin">
			<fileset dir="bin">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/sorcer/${module.name}/policy">
			<fileset dir="policy">
				<include name="*" />
			</fileset>
		</copy>
		<chmod dir="${iGrid.home}/bin/sorcer/${module.name}/bin" perm="755" includes="*.sh" />
	</target>
	
</project>
