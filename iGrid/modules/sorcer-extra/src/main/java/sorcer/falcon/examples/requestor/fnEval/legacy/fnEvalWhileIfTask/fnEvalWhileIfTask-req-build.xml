<project name="Function Evaluator WhileIfTask" default="all" basedir=".">
	<property name="module.name" value="falcon/examples/requestor/fnEval/legacy/fnEvalWhileIfTask" />
	<!-- set global properties -->
	<import file="../../../../../../../../../common-build.xml" />
	<property name="src" value="../../../../../../../../src" />
	
	<path id="project.classpath">
		<pathelement location="${classes}/" />
		<pathelement location="${lib}/jgapp.jar" />
		<path refid="jini.path" />
		<path refid="jep.path" />
	</path>

	<!-- The sources to compile -->
	<patternset id="ant.java">
		<include name="sorcer/falcon/examples/requestor/fnEval/legacy/fnEvalWhileIfTask/FnEvalWhileIfTask.java" />
		<include name="sorcer/falcon/examples/condition/**/*.java" />
		<include name="sorcer/falcon/examples/context/**/*.java" />
	</patternset>
	
	<patternset id="ant.classes">
		<include name="sorcer/falcon/examples/requestor/fnEval/legacy/fnEvalWhileIfTask/FnEvalWhileIfTask.class" />
		<include name="sorcer/falcon/examples/condition/**/*.class" />
		<include name="sorcer/falcon/examples/context/**/*.class" />
	</patternset>

	<patternset id="ant.jars">
		<include name="fnEvalWhileIfTask.jar" />
		<include name="fnEvalWhileIfTask-dl.jar" />
	</patternset>

	<target name="compile" depends="compileSources" />
	<target name="jars" depends="fnEvalWhileIfTask" />
	<target name="fnEvalWhileIfTask" depends="fnEvalWhileIfTask.jar, fnEvalWhileIfTask-dl.jar" />
	<target name="all" depends="prepare, compile, jars, copy-run-prv-files" />

	<target name="fnEvalWhileIfTask.jar">
		<classdepandjar jarfile="${lib}/fnEvalWhileIfTask.jar" files="true">
			<classpath refid="project.classpath"/>
			<!-- Put the full package as much as possible for a smaller jar file -->
			<in name="sorcer.falcon.examples.requestor.fnEval.legacy.fnEvalWhileIfTask" />
			<in name="sorcer.falcon.examples.condition" />
			<in name="sorcer.falcon.examples.context" />
			<in name="sorcer.falcon.examples.provider.fnEval" />
				
			<topclass name="sorcer.falcon.examples.requestor.fnEval.legacy.fnEvalWhileIfTask.FnEvalWhileIfTask" />
			<topclass name="sorcer.falcon.examples.context.FnContext" />
			<topclass name="sorcer.falcon.examples.condition.FnWhileCondition" />
			<topclass name="sorcer.falcon.examples.provider.fnEval.FnEvalRemote" />
		</classdepandjar>
	</target>
	
	<target name="fnEvalWhileIfTask-dl.jar">
		<classdepandjar jarfile="${lib}/fnEvalWhileIfTask-dl.jar" files="true">
			<classpath refid="project.classpath"/>
			<in name="sorcer"/>
			<in name="jgapp" />
			
			<topclass name="sorcer.falcon.examples.provider.fnEval.FnEvalRemote" />
			<topclass name="sorcer.falcon.examples.context.FnContext" />
			<topclass name="sorcer.falcon.examples.condition.FnWhileCondition" />
			
			<topclass name="sorcer.core.exertion.ServiceJob" />
			<topclass name="sorcer.core.exertion.ServiceTask" />
			<topclass name="sorcer.core.exertion.ExertionEnvelop" />
			<topclass name="sorcer.core.context.ServiceContext" />
		</classdepandjar>
	</target>
	
	<target name="copy-run-prv-files">
		<mkdir dir="${sorcer.home}/bin/sorcer/${module.name}/bin" />
		<mkdir dir="${sorcer.home}/bin/sorcer/${module.name}/policy" />
		<mkdir dir="${sorcer.home}/bin/sorcer/${module.name}/logs" />
		<copy todir="${sorcer.home}/bin/sorcer/${module.name}/bin">
			<fileset dir="bin">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${sorcer.home}/bin/sorcer/${module.name}/policy">
			<fileset dir="policy">
				<include name="*" />
			</fileset>
		</copy>
		<chmod dir="${sorcer.home}/bin/sorcer/${module.name}/bin" perm="755" includes="*.sh" />
	</target>
	
</project>
