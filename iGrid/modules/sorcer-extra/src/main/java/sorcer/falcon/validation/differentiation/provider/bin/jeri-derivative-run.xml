<?xml version="1.0"?>
<!-- 
Replace MYPROVIDER with your provider name and specify property value for "provider.class."
Also you might need to adjust the classpath (provider.classpath) for your provider 
-->
	
<project name="Run Function Evaluator" default="run.provider" basedir=".">

	<!-- load system environment variables -->
	<property environment="env" />
	<import file="${env.SORCER_HOME}/modules/common-run.xml" />
	
	<echo message="SORCER_HOME: ${sorcer.home}" />
	<echo message="Webster: ${provider.webster.url}" />
	
	<!-- set property values here -->
	<property name="provider.name" value="derivative"/>
	<property name="provider.class" value="sorcer.falcon.validation.differentiation.provider.DerivativeImpl"/>
	
	<!-- default settings -->
	<property name="jini.jars" value="${sorcer.home}/common/jini-ext.jar${path.separator}${sorcer.home}/common/serviceui-1.1.jar${path.separator}${sorcer.home}/common/sun-util.jar${path.separator}${sorcer.home}/common/jaxrpc.jar" />
	<property name="sorcer.jars" value="${sorcer.home}/lib/sorcer.jar${path.separator}${sorcer.home}/lib/jgapp.jar${path.separator}${sorcer.home}/common/jep-2.4.0.jar${path.separator}${sorcer.home}/common/ext-1.1.0.jar" />
	<property name="jini-dl.jars" value="${provider.webster.url}/jini-ext.jar ${provider.webster.url}/sun-util.jar ${provider.webster.url}/serviceui-1.1.jar"/>
	
	<target name="run.provider">
		<java jar="${common.lib}/start.jar" fork="yes">
			<sysproperty key="java.util.logging.config.file" value="${sorcer.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/${provider.name}-prv.policy" />
			<sysproperty key="sorcer.provider.codebase" value="${jini-dl.jars} ${provider.webster.url}/${provider.name}-dl.jar" />
			<sysproperty key="sorcer.provider.classpath" value="${jini.jars}${path.separator}${sorcer.jars}${path.separator}${sorcer.home}/lib/${provider.name}.jar" />
			<sysproperty key="sorcer.provider.impl" value="${provider.class}"/>
			<sysproperty key="sorcer.provider.config" value="../configs/jeri-${provider.name}-prv.config" />
			<sysproperty key="sorcer.env.file" value="${sorcer.home}/configs/sorcer.env" />
			<arg value="${sorcer.home}/configs/startup-prv.config" />			
		</java>
	</target>
	
</project>
