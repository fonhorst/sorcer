<project name="Derivative Evaluator" default="all" basedir=".">
	<property name="module.name" value="falcon/validation/integration/provider" />
	<!-- set global properties from common-build.xml -->
	<import file="../../../../../../../common-build.xml" />
	<property name="src" value="../../../../../../src" />
	
	<path id="project.classpath">
		<pathelement location="${classes}" />
		<path refid="jini.path" />
		<path refid="jep.path" />
	</path>

	<!-- The sources to compile -->
	<patternset id="ant.java">
		<include name="sorcer/falcon/validation/integration/provider/**/*.java" />
		<include name="sorcer/falcon/validation/base/**/*.java" />
		<include name="sorcer/falcon/validation/context/**/*.java" />
	</patternset>
	
	<patternset id="ant.classes">
		<include name="sorcer/falcon/validation/integration/provider/**/*.class" />
		<include name="sorcer/falcon/validation/base/**/*.class" />
		<include name="sorcer/falcon/validation/context/**/*.class" />
	</patternset>
	
	<target name="compile" depends="compileSources" />
	<target name="jars" depends="integral" />
	<target name="integral" depends="integral.jar, integral-dl.jar" />
	<target name="all" depends="prepare, compile, jars, copy-run-prv-files" />
	
	<target name="integral.jar">
		<classdepandjar jarfile="${lib}/integral.jar" files="true">
			<classpath refid="project.classpath"/>
			<!-- Put the full package as much as possible for a smaller jar file -->
			<in name="sorcer.falcon.validation.base" />
			<in name="sorcer.falcon.validation.context" />
			<in name="sorcer.falcon.validation.integration.provider" />
			
			<!-- Add all provider classes here -->
			<topclass name="sorcer.falcon.validation.base.IntegralRemote" />
			<topclass name="sorcer.falcon.validation.base.Function" />
			<topclass name="sorcer.falcon.validation.context.CalcContext" />
			<topclass name="sorcer.falcon.validation.integration.provider.IntegralImpl" />
		</classdepandjar>
	</target>

	<target name="integral-dl.jar">
		<classdepandjar jarfile="${lib}/integral-dl.jar" files="true">
			<classpath refid="project.classpath"/>
			<in name="sorcer"/>
			<in name="jgapp" />
			<topclass name="sorcer.falcon.validation.base.IntegralRemote" />
			<topclass name="sorcer.falcon.validation.base.Function" />
			<topclass name="sorcer.falcon.validation.context.CalcContext" />
			<topclass name="sorcer.falcon.validation.integration.provider.IntegralImpl_Stub" />
			
			<topclass name="sorcer.core.AdministratableProvider" />
			<topclass name="sorcer.jini.lookup.entry.SorcerServiceType" />
			<topclass name="sorcer.ui.serviceui.UIComponentFactory" />	
			<topclass name="sorcer.ui.serviceui.UIFrameFactory" />
			
			<topclass name="sorcer.core.exertion.ServiceJob" />
			<topclass name="sorcer.core.exertion.ServiceTask" />
			<topclass name="sorcer.core.exertion.ExertionEnvelop" />
			<topclass name="sorcer.core.context.ServiceContext" />
		</classdepandjar>
	</target>

	<target name="copy-run-prv-files">
		<mkdir dir="${sorcer.home}/bin/sorcer/${module.name}/configs" />
		<mkdir dir="${sorcer.home}/bin/sorcer/${module.name}/bin" />
		<mkdir dir="${sorcer.home}/bin/sorcer/${module.name}/policy" />
		<mkdir dir="${sorcer.home}/bin/sorcer/${module.name}/logs" />
		<copy todir="${sorcer.home}/bin/sorcer/${module.name}/configs">
			<fileset dir="configs">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${sorcer.home}/bin/sorcer/${module.name}/bin">
			<fileset dir="bin">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${sorcer.home}/bin/sorcer/${module.name}/policy">
			<fileset dir="policy">
				<include name="*" />
			</fileset>
		</copy>
		<chmod dir="${sorcer.home}/bin/sorcer/${module.name}/bin" perm="755" includes="*.sh" />
	</target>
	
</project>
