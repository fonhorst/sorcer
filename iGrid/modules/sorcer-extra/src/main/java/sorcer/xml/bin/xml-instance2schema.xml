<?xml version="1.0"?>

<project name="xml-instance2schema" default="xml-instance2schema" basedir=".">
	
	<!-- loads system environment variables -->
	<property environment="env"/>
	<import file="${env.SORCER_HOME}/modules/common-run.xml"/>
	
	<!-- set property values here -->
	<property name="requestor.name" value="xml-instance2schema"/>
	<property name="requestor.class"
		value="org.exolab.castor.xml.schema.util.XMLInstance2Schema"/>
	
	<path id="project.classpath">
		<pathelement location="${sorcer.home}/common/castor-1.2-xml-schema.jar"/>
		<pathelement location="${sorcer.home}/common/castor-1.2-anttasks.jar"/>
		<pathelement location="${sorcer.home}/common/castor-1.2-xml.jar"/>
		<pathelement location="${sorcer.home}/common/log4j-1.2.15.jar"/>
		<pathelement
			location="${sorcer.home}/common/commons-logging-api-1.1.jar"/>
		<pathelement location="${sorcer.home}/common/xalan.jar"/>
		<pathelement location="${sorcer.home}/common/xerces.jar"/>
		<pathelement location="${sorcer.home}/common/jaxb-xjc.jar"/>
	</path>
	
	<target name="run">
		<java classname="${requestor.class}" fork="yes">
			<arg line="${sorcer.home}/data/maelstrom/input/static.xml"/>
			<classpath refid="project.classpath"/>
		</java>
	</target>
	
	<target name="xml-instance2schema">
		<taskdef name="schema-gen"
			classname="org.castor.anttask.XMLInstance2SchemaTask"
			classpathref="project.classpath"/>
		
		<mkdir dir="${sorcer.home}/data/maelstrom/input/generated"/>
		<schema-gen file="${sorcer.home}/data/maelstrom/input/static.xml"
			XmlschemaFileName="${sorcer.home}/data/maelstrom/input/generated/schema.xsd"/>
	</target>
	
</project>
