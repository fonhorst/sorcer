<?xml version='1.0' encoding='ISO-8859-1' standalone='yes'?>
 <project name="SORCER" default="install" basedir=".">

 <property environment="env"/>
 <property name="CODEBASE" value="${env.APP_CODEBASE}" />
 <property name="PDIR" value="sorcer/dbas" />
 <property name="SORCER_HOME" value="${env.SORCER_HOME}/modules/sorcer" />

 <path id="project.classpath">
    <pathelement path="${env.CLASSPATH}" />
    <pathelement path="${env.CODEBASE}" />
 </path>

 <fileset dir=".">
    <patternset id="java.source" >
       <include name="benchmarks/**/*.java" />
       <include name="**/*.java" />
       <exclude name="**/SAVE/*.java" />
       <exclude name="**/BAK/*.java" />
    </patternset>
 </fileset>

 <fileset dir="${CODEBASE}">
    <patternset id="java.classes" >
       <include name="${PDIR}/**/*.class" />
       <exclude name="${PDIR}/**/SAVE/*.class" />
       <exclude name="${PDIR}/**/BAK/*.class" />
    </patternset>
 </fileset>
 
 <target name="install" depends="clean, compile, copy_files" />
  
 <target name="clean" if="${CODEBASE}/${PDIR}" >
   <delete verbose="true" >
    	<fileset dir="${CODEBASE}/${PDIR}" >
           <patternset refid="java.classes" />
        </fileset>
   </delete>
 </target>

  <target name="compile" >
   <javac srcdir="." destdir="${CODEBASE}" deprecation="no" >
    <classpath refid="project.classpath" />
    <patternset refid="java.source" />
   </javac>
 </target>

  <target name="copy_files" >
    <copy verbose="true" todir="${CODEBASE}/${PDIR}" >
      <fileset dir="${SORCER_HOME}/configs" >
        <include name="**/as.access" />
	<include name="**/as.def" />
        <include name="**/as.headers" />
	<include name="**/as.sql" />
      </fileset>	
    </copy>
  </target>

</project>
