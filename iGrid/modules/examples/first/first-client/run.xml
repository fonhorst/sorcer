<?xml version="1.0"?>

<project default="run.requestor" basedir=".">

	<!-- loads system environment variables -->
	<property environment="env" />
	<import file="${env.IGRID_HOME}/modules/common-run.xml" />
	<echo message="webster: ${provider.webster.url}" />

	<!-- set property values here -->
	<property name="requestor.name" value="first-client" />
	<property name="requestor.version" value="1.0-SNAPSHOT" />
	<property name="requestor.class" value="com.sorcersoft.first.HelloWorldTester" />

	<!-- provider codeabse jars -->
	<property name="j1" value="${provider.webster.url}/org/sorcersoft/sorcer/first-api/1.0-SNAPSHOT/first-api-1.0-SNAPSHOT.jar" />
	<property name="j2" value="${provider.webster.url}/org/sorcersoft/sorcer/sorcer-api/${v.sorcer}/sorcer-api-${v.sorcer}.jar" />
	<property name="requestor.codebase" value="${j1} ${j2}" />

	<!-- define classpath using the requestor's jar file and maven runtime classpath -->
	<path id="run.classpath">
	    <path refid="runtime.classpath"/>  
	    <pathelement location="${mvn.repo}/org/sorcersoft/sorcer/${requestor.name}/${requestor.version}/${requestor.name}-${requestor.version}.jar" />
	</path>
	
</project>

