<?xml version="1.0"?>
<!-- 
Specify property value for "provider.name".
Also you might need to adjust the "soercer.env" properties 
and  "java.util.logging.config.file" for your provider 
-->
<project name="WhoIsIt" default="run.provider" basedir=".">

	<property environment="env" />
	<property name="pom.file" value="${iGrid.home}/modules/examples/ex1/ex1-service/pom.xml" />
	
	<import file="${env.IGRID_HOME}/modules/common-run.xml" />

	<!-- set property values here -->
	<property name="provider.name" value="whoIsIt" />
	<property name="provider.class" value="sorcer.core.provider.ServiceTasker" />	
	
	
	<prepare-boot-and-mvn />

	<!-- define provider codebase, list jars only -->
	<property name="j1" value="/org/sorcersoft/sorcer/ex1-api/${v.sorcer}/ex1-api-${v.sorcer}.jar" />
	<property name="j2" value="/org/sorcersoft/sorcer/sorcer-api/${v.sorcer}/sorcer-api-${v.sorcer}.jar" />
	<property name="j3" value="/org/sorcersoft/sorcer/exertlet-ui/${v.sorcer}/exertlet-ui-${v.sorcer}.jar" />

	<!-- start service provider -->
	<target name="run.provider" >
	  <!-- define provider classpath -->
	  <path id="project.classpath">
	      <path refid="runtime.classpath"/>  
	      <pathelement location="${mvn.repo}/org/sorcersoft/sorcer/ex1-service/${v.sorcer}/ex1-service-${v.sorcer}.jar" />
	      <pathelement location="${mvn.repo}/org/sorcersoft/sorcer/ex1-api/${v.sorcer}/ex1-api-${v.sorcer}.jar" />
	  </path>
	  <java classname="com.sun.jini.start.ServiceStarter" fork="yes">
			<classpath refid="boot.classpath"/>
			<arg value="${iGrid.home}/configs/startup-boot-prv.config" />
			<sysproperty key="sorcer.provider.impl" value="${provider.class}" />
			<sysproperty key="sorcer.provider.config" value="../configs/${provider.name}-bean1.config" />
			<sysproperty key="sorcer.provider.codebase.jars" value="${j1} ${j2} ${j3}" />
			<sysproperty key="sorcer.provider.classpath" value="${toString:project.classpath}" />
			<sysproperty key="iGrid.home" value="${iGrid.home}" />
			<sysproperty key="sorcer.env.file" value="${iGrid.home}/configs/sorcer.env" />
			<sysproperty key="java.security.policy" value="../policy/${provider.name}-bean.policy" />
			<sysproperty key="java.util.logging.config.file" value="${iGrid.home}/configs/sorcer.logging" />
		</java>
	</target>
</project>