<?xml version="1.0"?>

<project name="Worker Requestor" default="run.requestor" basedir=".">
	<!-- system environment variables -->
	<property environment="env" />
	<import file="${env.IGRID_HOME}/modules/common-run.xml" />

	<echo message="IGRID_HOME: ${iGrid.home}" />
	<echo message="WEBSTER: ${provider.webster.url}" />

	<!-- set property values here -->
	<property name="provider.api" value="ex6-api" />
	<property name="webster" value="${provider.webster.url}" />
	<property name="requestor.name" value="ex6-client" />
	<property name="requestor.class" value="sorcer.core.requestor.ExertletRunner" />

	
	<!-- provider classpath -->
	<path id="run.classpath">
	    <path refid="runtime.classpath"/>  
	    <pathelement location="${mvn.repo}/org/sorcersoft/sorcer/${requestor.name}/${v.sorcer}/${requestor.name}-${v.sorcer}.jar" />
	</path>
	
	<!-- provider codeabse jars -->
	<property name="j1" value="${webster}/org/sorcersoft/sorcer/${provider.api}/${v.sorcer}/${provider.api}-${v.sorcer}.jar" />
	<property name="j2" value="${webster}/org/sorcersoft/sorcer/sorcer-api/${v.sorcer}/sorcer-api-${v.sorcer}.jar" />
	<property name="j3" value="${webster}/org/sorcersoft/sorcer/exertlet-ui/${v.sorcer}/exertlet-ui-${v.sorcer}.jar" />

	<!-- start provider -->
	<target name="run.requestor" depends="mvn-init">
		<java classname="${requestor.class}" fork="yes">
			<arg value="sorcer.arithmetic.requestor.ArithmeticExertletRunner" />
			<classpath refid="run.classpath"/>
			<sysproperty key="java.util.logging.config.file" value="${iGrid.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/${requestor.name}.policy" />
			<sysproperty key="sorcer.rmi.server.codebase" value="${j1} ${j2} ${j3}" />
			<sysproperty key="sorcer.env.file" value="${iGrid.home}/configs/sorcer.env" />
			<sysproperty key="java.security.policy" value="src/main/resources/policy/${requestor.name}.policy" />
		</java>
	</target>		
</project>



