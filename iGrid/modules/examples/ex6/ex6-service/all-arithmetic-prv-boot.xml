<?xml version="1.0"?>
<project name="Arithmetic all bean services" default="all-arithmetic" basedir=".">
	<property environment="env" />
	<import file="${env.IGRID_HOME}/modules/common-run.xml" />
	
	<target name="all-arithmetic">
	    <!--<java classname="com.sun.jini.start.ServiceStarter" fork="yes"> -->
	    <java classname="sorcer.boot.ServiceStarter" fork="yes">
		<jvmarg value="-Xdebug"/>
		<jvmarg value="-Xrunjdwp:transport=dt_socket,server=y,address=8000"/>			 	      
		<classpath refid="boot.classpath"/>
		<!--<arg value="src/main/resources/META-INF/sorcer/services.config" />
		--><sysproperty key="iGrid.home" value="${iGrid.home}" />
		<sysproperty key="sorcer.env.file" value="${iGrid.home}/configs/sorcer.env" />
		<sysproperty key="java.security.policy" value="../policy/arithmetic-beans-prv.policy" />
		<sysproperty key="java.util.logging.config.file" value="${iGrid.home}/configs/sorcer.logging" />
	  </java>
	</target>
</project>