import java.net.URL;
import com.sun.jini.start.ServiceDescriptor;
import com.sun.jini.config.ConfigUtil;
import sorcer.provider.boot.Booter;
import sorcer.provider.boot.SorcerDescriptorUtil;
import sorcer.provider.boot.SorcerServiceDescriptor;
import sorcer.util.ArtifactCoordinates;


com.sun.jini.start {
	home = "${iGrid.home}";
	policy = "${java.security.policy}";
	ps = System.getProperty("path.separator");

	// webster root directories
    jiniLibPath 	 = home + "${/}lib${/}river${/}lib";
    deployPath 		 = home + "${/}deploy";
    httpData 		 = home + "${/}data";
	repo 			 = "${user.home}/.m2/repository/";

	port = 0;


    serviceDescriptors = new ServiceDescriptor[] {
        /* SORCER Webster, set to serve up 10 directories */
        // (String policy, int port, String[] roots, String address, int startPort, int endPort, boolean debug, boolean isDaemon)
        SorcerDescriptorUtil.getWebster(policy,
                                         port,
                                         new String[] { repo,
                                                        jiniLibPath,
                                                        httpData,
                                                        deployPath
                                                        }
                                         ),
        new SorcerServiceDescriptor(
 			""+new ArtifactCoordinates("org.sorcersoft.sorcer","ex1-api","11.1"),
            policy,
            ConfigUtil.concat(new Object[] {
            	repo, new ArtifactCoordinates("org.sorcersoft.sorcer","ex1-service","11.1"), ps,
            	repo, new ArtifactCoordinates("com.sleepycat","je","4.1.21"), ps,
            	repo, new ArtifactCoordinates("net.jini.lookup","serviceui","2.2.1"), ps
            }),
	        "sorcer.ex1.provider.WhoIsItProvider1",
          	new String[] { "src/main/resources/META-INF/sorcer${/}whoIsIt-prv.config" }
        ),

        new SorcerServiceDescriptor(
 			""+new ArtifactCoordinates("org.sorcersoft.sorcer","ex1-api","11.1"),
            policy,
            ConfigUtil.concat(new Object[] {
            	repo, new ArtifactCoordinates("org.sorcersoft.sorcer","ex1-service","11.1"), ps,
            	repo, new ArtifactCoordinates("com.sleepycat","je","4.1.21"), ps,
            	repo, new ArtifactCoordinates("net.jini.lookup","serviceui","2.2.1"), ps
            }),
	        "sorcer.ex1.provider.WhoIsItProvider1",
          	new String[] { "src/main/resources/META-INF/sorcer${/}whoIsIt-prv.config" }
        ),


        };


}
