<?xml version="1.0"?>

<project name="Worker? requestor" default="run.requestor" basedir=".">

	<!-- loads system environment variables -->
	<property environment="env" />
	<import file="${env.SORCER_HOME}/modules/common-run.xml" />
	<property name="webster" value="${provider.webster.url}" />
	<echo message="webster: ${webster}" />

	<!-- set property values -->
	<property name="requestor.name" value="worker" />
	<property name="requestor.class" value="sorcer.core.requestor.MultiExertionRunner" />

	<!-- define classpath -->
	<path id="project.classpath">
		<pathelement location="${sorcer.lib}/${requestor.name}-req.jar" />
		<pathelement location="${sorcer.lib}/sorcer-prv.jar" />
		<pathelement location="${sorcer.lib}/sorcer-lib.jar" />
		<pathelement location="${sorcer-ext.lib}/webster.jar" />
		<pathelement location="${jini.lib}/jsk-lib.jar" />
		<pathelement location="${jini.lib}/jsk-platform.jar" />
		<pathelement location="${jini.lib}/serviceui.jar" />
		<pathelement location="${rio.lib}/rio.jar" />
	</path>

	<!-- define codebase jars -->
	<property name="j1" value="${requestor.name}-dl.jar" />
	<property name="j2" value="sorcer-prv-dl.jar" />
	<property name="j3" value="sorcer-lib.jar" />
		
	<!-- start requestor -->
	<target name="run.requestor">
		<java classname="${requestor.class}" fork="yes">
			<jvmarg value="-Xdebug"/>
			<jvmarg value="-Xnoagent"/>
			<jvmarg value="-Djava.compiler=NONE"/>
			<jvmarg value="-Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=10005"/>
			<jvmarg value="-Djava.compiler=NONE"/>
			<arg value="sorcer.ex5.requestor.WorkerJobRunner" />
			<arg value="1" />
			<arg value="/opt/prubach/StatRequestorRunner.csv" />
			<arg value="Worker1" />
			<arg value="Worker2" />
			<arg value="Worker3" />
			<arg value="Jobber" />
			<classpath refid="project.classpath" />
			<sysproperty key="sorcer.home" value="${sorcer.home}" />
			<sysproperty key="sorcer.webster.internal" value="true" />
			<sysproperty key="sorcer.webster.debug" value="true" />
			<sysproperty key="sorcer.codbase.jars" value="${j1} ${j2} ${j3}" />
			<sysproperty key="java.util.logging.config.file" value="${sorcer.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/${requestor.name}-req.policy" />
			<sysproperty key="sorcer.env.file" value="${sorcer.home}/configs/sorcer.env" />
		</java>
	</target>

</project>



