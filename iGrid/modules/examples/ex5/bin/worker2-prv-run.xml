<?xml version="1.0"?>
<!-- 
Replace "provider.name" with your provider name and specify property value for "provider.class."
Also you might need to adjust the classpath (provider.classpath) for your provider 
-->

<project name="Run Worker Provider" default="run.provider" basedir=".">

	<!-- system environment variables -->
	<property environment="env" />
	<import file="${env.SORCER_HOME}/modules/common-run.xml" />
	<echo message="SORCER_HOME: ${sorcer.home}" />

	<!-- set property values here -->
	<property name="provider.name" value="worker2" />
	<property name="provider.class" value="sorcer.ex5.provider.Worker2Provider" />

	<!-- provider classpath -->
	<path id="project.classpath">
		<pathelement location="${sorcer.lib}/${provider.name}.jar" />
		<pathelement location="${rio.lib}/rio.jar" />
	</path>

	<!-- provider codeabse jars -->
	<property name="j1" value="${provider.name}-dl.jar" />
	<property name="j2" value="sorcer-prv-dl.jar" />
	<property name="j3" value="jsk-dl.jar" />
	<property name="j4" value="rio.jar" />

	<!-- start provider -->
	<target name="run.provider">
		<java jar="${lib}/boot.jar" fork="yes">
			<arg value="${sorcer.home}/configs/startup-run-prv.config" />
			<sysproperty key="sorcer.provider.impl" value="${provider.class}" />
			<sysproperty key="sorcer.provider.config" value="../configs/${provider.name}-prv.config" />
			<sysproperty key="sorcer.provider.codebase.jars" value="${j1} ${j2} ${j3} ${j4}" />
			<sysproperty key="sorcer.provider.classpath" value="${toString:project.classpath}" />
			<sysproperty key="sorcer.home" value="${sorcer.home}" />
			<sysproperty key="sorcer.env.file" value="${sorcer.home}/configs/sorcer.env" />
			<sysproperty key="java.security.policy" value="../policy/${provider.name}-prv.policy" />
			<sysproperty key="java.util.logging.config.file" value="${sorcer.home}/configs/sorcer.logging" />
		</java>
	</target>

</project>
