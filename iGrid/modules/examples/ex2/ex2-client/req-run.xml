<?xml version="1.0"?>

<project default="run.requestor" basedir=".">

	<!-- loads system environment variables -->
	<property environment="env" />
	<import file="${env.SORCER_HOME}/modules/common-run.xml" />
	<echo message="webster: ${provider.webster.url}" />
	<property name="webster" value="${provider.webster.url}" />
	
	<property name="requestor.groupId" value="org.sorcersoft.sorcer" />
	<property name="requestor.name" value="ex2-client" />
	<property name="requestor.version" value="11.1" />
	
	<!-- provider codeabse jars -->
	<property name="j1" value="${webster}/org/sorcersoft/sorcer/ex2-api/${v.sorcer}/ex2-api-${v.sorcer}.jar" />
	<property name="j2" value="${webster}/org/sorcersoft/sorcer/sorcer-api/${v.sorcer}/sorcer-api-${v.sorcer}.jar" />
	<property name="requestor.codebase" value="${j1} ${j2}" />
	
	<target name="run.requestor" depends="mvn-init, requestor.policy.check">
		<java classname="${requestor.class}" fork="yes">
		 	<classpath refid="run-req.classpath"/>
		  	<sysproperty key="java.util.logging.config.file" value="${sorcer.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="${basedir}/../policy/worker-req.policy" />
			<sysproperty key="java.rmi.server.codebase" value="${requestor.codebase}" />
			<sysproperty key="sorcer.env.file" value="${sorcer.home}/configs/sorcer.env" />
			<arg value="${ex2-client.arg1}" />
			<arg value="${ex2-client.arg2}" />
			<arg value="${ex2-client.arg3}" />			
		</java>
	</target>
</project>


