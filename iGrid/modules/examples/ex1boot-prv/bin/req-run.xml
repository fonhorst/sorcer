<?xml version="1.0"?>

<project default="run.requestor" basedir=".">

<!-- loads system environment variables -->
	<property environment="env" />
	<property name="pom.file" value="${sorcer.home}/modules/examples/ex1/ex1-client/pom.xml" />
	 
	<import file="${env.SORCER_HOME}/modules/common-run.xml" />
	<echo message="webster: ${provider.webster.url}" />
	<property name="webster" value="${provider.webster.url}" />

	<property name="requestor.runner" value="sorcer.core.requestor.ExertionRunner" />
	<property name="requestor.groupId" value="org.sorcersoft.sorcer" />
	<property name="requestor.name" value="ex1-client" />
	<property name="requestor.api" value="ex1-api" />
	<property name="requestor.client.api" value="ex1-client-api" />
	<property name="requestor.version" value="11.1" />

	<target name="run.requestor" depends="mvn-init">
		<java classname="${requestor.runner}" fork="yes">
		 	<classpath refid="run-req.classpath"/>
			<sysproperty key="sorcer.webster.internal" value="true" />
			<sysproperty key="sorcer.webster.debug" value="true" />
		  	<sysproperty key="java.util.logging.config.file" value="${sorcer.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/whoIsIt-req.policy" />
			<sysproperty key="sorcer.exertrun.codebase" value="${requestor.groupId}:${requestor.api}:${requestor.version} ${requestor.groupId}:${requestor.client.api}:${requestor.version}" />
			<sysproperty key="sorcer.env.file" value="${sorcer.home}/configs/sorcer.env" />
			<sysproperty key="requestor.properties" value="../configs/worker-run.properties" />
			<arg value="${requestor.class}" />		  
			<arg value="${run.arg1}" />
			<arg value="${run.arg2}" />
			<arg value="${run.arg3}" />
		</java>
	</target>	
</project>

