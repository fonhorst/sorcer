<?xml version="1.0"?>

<project default="run.requestor" basedir=".">

<!-- loads system environment variables -->
	<property environment="env" />
	<property name="pom.file" value="${iGrid.home}/modules/examples/ex1/ex1-client/pom.xml" />
	 
	<import file="${env.IGRID_HOME}/modules/common-run.xml" />
	<echo message="webster: ${provider.webster.url}" />
	<property name="webster" value="${provider.webster.url}" />


	<!-- provider codeabse jars -->
	<property name="j1" value="/org/sorcersoft/sorcer/ex1-api/${v.sorcer}/ex1-api-${v.sorcer}.jar" />
	<property name="j2" value="/org/sorcersoft/sorcer/ex1-client-api/${v.sorcer}/ex1-client-api-${v.sorcer}.jar" />
	<property name="j3" value="/org/sorcersoft/sorcer/sorcer-api/${v.sorcer}/sorcer-api-${v.sorcer}.jar" />

	<!-- define classpath using the requestor's jar file and maven runtime classpath -->
	<path id="run.classpath">
	    <path refid="runtime.classpath"/>  
	    <pathelement location="${mvn.repo}/org/sorcersoft/sorcer/ex1-client/${v.sorcer}/ex1-client-${v.sorcer}.jar" />
	</path>
	
	<target name="run.requestor" depends="mvn-init">
		<java classname="${requestor.runner}" fork="yes">
			<arg value="${requestor.class}" />		  
			<arg value="${run.arg1}" />
			<arg value="${run.arg2}" />
			<arg value="${run.arg3}" />
		 	<classpath refid="run.classpath"/>
			<sysproperty key="iGrid.home" value="${iGrid.home}" />
			<sysproperty key="sorcer.webster.internal" value="true" />
			<sysproperty key="sorcer.webster.debug" value="true" />
		  	<sysproperty key="java.util.logging.config.file" value="${iGrid.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/whoIsIt-req.policy" />
			<sysproperty key="sorcer.codebase.jars" value="${j1} ${j2} ${j3}" />
			<sysproperty key="sorcer.env.file" value="${iGrid.home}/configs/sorcer.env" />
		</java>
	</target>
</project>

