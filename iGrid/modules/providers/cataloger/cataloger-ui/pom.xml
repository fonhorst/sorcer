<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>cataloger</artifactId>
        <groupId>org.sorcersoft.sorcer</groupId>
        <version>11.1</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>cataloger-ui</artifactId>
    <dependencies>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sorcer-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sorcer</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1.1</version>

                <configuration>
                    <mainClass>sorcer.core.provider.cataloger.ui.CatalogerUI</mainClass>
                    <systemProperties>
                        <systemProperty><key>java.util.logging.config.file</key><value>${env.IGRID_HOME}/configs/sorcer.logging</value></systemProperty>
                        <systemProperty><key>java.protocol.handler.pkgs</key><value>net.jini.url</value></systemProperty>
                        <systemProperty><key>java.security.policy</key><value>${env.IGRID_HOME}/policy/policy.all</value></systemProperty>
<!--
                        <systemProperty><key>data.server.port</key><value>9000</value></systemProperty>
                        <systemProperty><key>data.root.dir</key><value>${env.IGRID_HOME}/data</value></systemProperty>
                        <systemProperty><key>requestor.data.dir</key><value>optimization/input</value></systemProperty>
                        <systemProperty><key>sorcer.env.file</key><value>${env.IGRID_HOME}/configs/sorcer.env</value></systemProperty>
                        <systemProperty><key>sorcer.formats.file</key><value>${env.IGRID_HOME}/configs/data.formats</value></systemProperty>
-->
                    </systemProperties>

                    <workingDirectory>${project.basedir}</workingDirectory>
                </configuration>
            </plugin>

        </plugins>
    </build>
</project>