<?xml version="1.0"?>

<project default="run.requestor" xmlns:artifact="antlib:org.apache.maven.artifact.ant">

    <!-- loads system environment variables -->
    <property environment="env"/>
    <import file="${env.IGRID_HOME}/modules/common-run.xml"/>
    <echo message="webster: ${provider.webster.url}"/>

    <!-- set property values here -->
    <property name="requestor.name" value="${rootArtifactId}-client"/>
    <property name="requestor.version" value="${version}"/>
    <property name="requestor.class" value="${package}.${providerInterface}Tester"/>

    <!-- provider codeabse jars -->
    <path id="requestor.codebase">
        <pathelement location="${${groupId}:${rootArtifactId}-api:jar}"/>
        <pathelement location="${'org.sorcersoft.sorcer:sorcer-api:jar'}"/>
    </path>

    <path id="requestor.classpath">
        <pathelement location="${baseDir}/target/classes"/>
    </path>

    <!-- define classpath using the requestor's jar file and maven runtime classpath -->
    <path id="run.classpath">
        <path refid="runtime.classpath"/>
        <path refid="requestor.classpath"/>
    </path>

</project>

