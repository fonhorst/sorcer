<project
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
        xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.sorcersoft.sorcer</groupId>
        <version>11.1</version>
        <artifactId>tools</artifactId>
    </parent>

    <artifactId>boot</artifactId>

    <name>SORCER booter</name>
    <description>SORCER</description>
    <url>http://sorcersoft.org/</url>

    <dependencies>
        <dependency>
            <groupId>edu.emory.mathcs.util</groupId>
            <artifactId>emory-util-concurrent</artifactId>
            <version>2.1</version>
        </dependency>
        <dependency>
            <groupId>edu.emory.mathcs.util</groupId>
            <artifactId>emory-util-classloader</artifactId>
            <version>2.1</version>
        </dependency>


        <dependency>
            <groupId>net.jini</groupId>
            <artifactId>jsk-lib</artifactId>
            <version>${v.jini}</version>
        </dependency>
        <dependency>
            <groupId>net.jini</groupId>
            <artifactId>jsk-platform</artifactId>
            <version>${v.jini}</version>
        </dependency>


        <dependency>
            <groupId>org.apache.river</groupId>
            <artifactId>start</artifactId>
            <version>${v.jini}</version>
        </dependency>

        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sorcer</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio-platform</artifactId>
            <version>5.0-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1.1</version>
                <configuration>
                    <includeProjectDependencies>true</includeProjectDependencies>
                    <includePluginDependencies>false</includePluginDependencies>
                    <executable>java</executable>
                    <executableDependency>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>boot</artifactId>
                    </executableDependency>

                    <arguments>
                        <argument>-DiGrid.home=${env.IGRID_HOME}</argument>
                        <!--<argument>-Drio.home=${env.RIO_HOME}</argument>-->
                        <argument>-Dsorcer.env.file=${env.IGRID_HOME}/configs/sorcer.env</argument>
                        <argument>-Dwebster.tmp.dir=${env.IGRID_HOME}</argument>

                        <argument>-Djava.util.logging.config.file=${env.IGRID_HOME}/configs/sorcer.logging</argument>
                        <argument>-Djava.protocol.handler.pkgs=net.jini.url|sorcer.util.bdb.sos</argument>

                        <argument>-Djava.security.policy=../../sorcer/policy/policy.all</argument>
                        <argument>-classpath</argument>
                        <classpath/>
                        <argument>com.sun.jini.start.ServiceStarter</argument>
                        <argument>../../../configs/boot-iGrid-min-http.config</argument>
                    </arguments>

                    <workingDirectory>${project.root}</workingDirectory>

                    <!--<systemProperties>
                        <systemProperty>
                            <key>iGrid.home</key>
                            <value>${iGrid.home}</value>
                        </systemProperty>
                    </systemProperties>-->
                </configuration>
            </plugin>

        </plugins>
    </build>
</project>
