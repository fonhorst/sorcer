<?xml version="1.0" encoding="UTF-8"?>
<!--
 Default platform configuration
-->
<platform>
     <!--
    SORCER jars to load into the common classloader.
    -->
    <capability name="SORCER" common="yes">
        <version>5.0</version>
        <manufacturer>SORCERsoft.org</manufacturer>
        <classpath>${iGrid.home}/lib/sorcer/lib/sorcer-prv.jar ${iGrid.home}/lib/sorcer/lib/sorcer-vfe-lib.jar ${iGrid.home}/lib/sorcer/lib/sorcer-modeling-lib.jar</classpath>
    </capability>
    
    <!--
    River (Jini) jars to load into the common classloader.
    -->
    <capability name="River" common="yes">
        <version>2.1.1</version>
        <manufacturer>Apache Software Foundation</manufacturer>
        <classpath>${iGrid.home}/lib/river/lib/jsk-lib.jar ${iGrid.home}/lib/river/lib/serviceui.jar</classpath>
    </capability>
    
    <!--
    Berkeley database jars to load into the common classloader.
    -->
    <capability name="Berkeley DB JE" common="yes">
        <version>je-4.1.21</version>
        <manufacturer>Oracle</manufacturer>
        <classpath>${iGrid.home}/lib/common/je-4.1.21.jar</classpath>
    </capability>  
    
    <!--
    Rio jars to load into the common classloader.
    -->
    <capability name="Rio"
                class="org.rioproject.system.capability.software.RioSupport"
                common="yes">
        <version>4.0 M3</version>
        <classpath>${iGrid.home}/lib/rio/lib/rio-platform.jar ${iGrid.home}/lib/rio/lib-dl/rio-api.jar</classpath>
    </capability>
    
     <!--
    Engineering jars to load into the common classloader.
    -->
    <capability name="Engineering"
                common="yes">
        <version>5.0</version>
        <manufacturer>SORCERsoft.org</manufacturer>
        <classpath>${iGrid.home}/lib/common/jna.jar ${iGrid.home}/lib/common/jep-2.4.1a.jar ${iGrid.home}/lib/common/jfreechart/jcommon-1.0.17.jar ${iGrid.home}/lib/common/jfreechart/jfreechart-1.0.14.jar</classpath>
    </capability>
    
</platform>

