<?xml version="1.0" encoding="UTF-8"?>
<!--
 Default platform configuration
-->
<platform>
     <!--
    SORCER jars to load into the common classloader.
    -->
    <capability name="SORCER" common="yes">
        <!--
        <version>5.0</version>
        -->
        <version>11.1</version>
        <manufacturer>SORCERsoft.org</manufacturer>
        <classpath>
			<entry>org.sorcersoft.sorcer:sorcer-api</entry>
			<entry>org.sorcersoft.sorcer:provider-common</entry>
		</classpath>
    </capability>
    
    <!--
    River (Jini) jars to load into the common classloader.
    -->
    <capability name="River" common="yes">
        <version>2.2.1</version>
        <manufacturer>Apache Software Foundation</manufacturer>
        <classpath>
			<entry>net.jini:jsk-dl</entry>
			<entry>net.jini.lookup:serviceui</entry>
		</classpath>
    </capability>
    
    <!--
    Berkeley database jars to load into the common classloader.
    -->
    <capability name="Berkeley DB JE" common="yes">
        <version>4.1.21</version>
        <manufacturer>Oracle</manufacturer>
        <classpath>
			<entry>com.sleepycat:je</entry>
		</classpath>
    </capability>  
    
    <!--
    Rio jars to load into the common classloader.
    -->
    <capability name="Rio"
                class="org.rioproject.system.capability.software.RioSupport"
                common="yes">
        <version>5.0-M2</version>
        <classpath>
			<entry>org.rioproject:rio-platform</entry>
			<entry>org.rioproject:rio-api</entry>
		</classpath>
    </capability>
    
</platform>

