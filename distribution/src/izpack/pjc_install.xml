<?xml version="1.0" encoding="iso-8859-1" standalone="yes"?>
<installation version="1.0">
    <info>
        <appname>SORCER</appname>
        <appversion>1.0-SNAPSHOT</appversion>
        <authors>
            <author email="michael.sobolewski@sorcersoft.com" name="Michael Sobolewski"/>
            <author email="pawel.rubach@sorcersoft.com" name="Pawe&#x142; Rubach"/>
            <author email="rafal.krupinski@sorcersoft.com" name="Rafa&#x142; Krupi&#x144;ski"/>
        </authors>
        <url>http://sorcersoft.github.com/</url>
        <uninstaller name="Uninstaller.jar" write="yes"/>
        <javaversion>1.6</javaversion>
        <requiresjdk>no</requiresjdk>
        <writeinstallationinformation>no</writeinstallationinformation>
        <run-privileged condition="izpack.windowsinstall.vista|izpack.windowsinstall.7"/>
    </info>
    <guiprefs height="480" resizable="no" width="640">
        <laf name="substance">
            <param name="variant" value="creme"/>
            <os family="windows"/>
        </laf>
        <modifier key="useFlags" value="yes"/>
        <modifier key="langDisplayType" value="default"/>
        <modifier key="headingPanelCounter" value="progressbar"/>
        <modifier key="headingPanelCounterPos" value="inNavigationPanel"/>
    </guiprefs>
    <locale>
        <langpack iso3="eng"/>
    </locale>
    <resources>
        <res id="LicencePanel.licence" parse="yes" src="/home/pol/iGrid/distribution/src/izpack/APACHE-LICENSE-2.0.txt"/>
        <res id="shortcutSpec.xml" src="pjc_install_shortcutSpec.xml"/>
        <res id="Unix_shortcutSpec.xml" src="pjc_install_Unix_shortcutSpec.xml"/>
        <res id="installer.langsel.img" src="/home/pol/iGrid/distribution/src/izpack/sos.com_icon.png"/>
        <res id="Installer.image" src="/home/pol/iGrid/distribution/src/izpack/SOS-leftpanel.png"/>
    </resources>
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="SimpleFinishPanel"/>
    </panels>
    <variables>
        <variable name="DesktopShortcutCheckboxEnabled" value="true"/>
    </variables>
    <packs>
        <pack name="Sorcer" preselected="yes" required="yes">
            <description>SORCER Platform</description>
            <file override="update"
                src="/home/pol/sorcer/distribution/target/sorcer-1.0-SNAPSHOT.zip" targetdir="$INSTALL_PATH/"/>
        </pack>
    </packs>
    <native name="ShellLink.dll" type="izpack"/>
    <native name="ShellLink_x64.dll" type="izpack"/>
</installation>
