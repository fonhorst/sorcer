<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>examples</artifactId>
    <groupId>org.sorcersoft.sorcer</groupId>
    <version>${v.sorcer}</version>

    <packaging>pom</packaging>
    <name>SORCER examples</name>
    <description>SORCER</description>
    <url>http://sorcersoft.org/</url>

    <modules>
        <module>ex1</module>
        <module>ex2</module>
        <module>ex3</module>
        <module>ex4</module>
        <module>ex5</module>
        <module>ex6</module>
    </modules>

    <properties>
        <v.sorcer>${v.sorcer}</v.sorcer>
        <v.jini>${v.jini}</v.jini>
        <v.blitz>${v.blitz}</v.blitz>
        <v.sleepycat>${v.sleepycat}</v.sleepycat>
        <v.rio>${v.rio}</v.rio>
        <v.groovy>${v.groovy}</v.groovy>
        <v.sigar>${v.sigar}</v.sigar>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
      <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.0</version>
            <configuration>
                <source>1.6</source>
                <target>1.6</target>
            </configuration>
        </plugin>
      <!--            <plugin>
                      <groupId>org.apache.maven.plugins</groupId>
                      <artifactId>maven-antrun-plugin</artifactId>
                      <version>1.7</version>
                      <executions>
                          <execution>
                              <id>initialize</id>
                              <phase>initialize</phase>
                              <configuration>
                              </configuration>
                              <goals>
                                  <goal>run</goal>
                              </goals>
                          </execution>
                      </executions>
                  </plugin>-->
      </plugins>
    </build>
    <repositories>
        <repository>
            <id>hashnot</id>
            <url>http://mvn.hashnot.com/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>oracle</id>
            <url>http://download.oracle.com/maven/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
        <repository>
            <id>maven.boundary.com</id>
            <name>maven.boundary.com-releases</name>
            <url>http://maven.boundary.com/artifactory/external</url>
        </repository>
    </repositories>

</project>